                    <div id="preferences-section" class="settings-content hidden">
                        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
                            <h3 class="text-lg font-semibold text-gray-800 mb-6">Display Preferences</h3>
                            
                            <div class="space-y-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Theme</label>
                                    <div class="grid grid-cols-3 gap-3">
                                        <button class="p-4 border-2 border-purple-500 rounded-lg text-center">
                                            <i class="fas fa-sun text-2xl text-yellow-500 mb-2"></i>
                                            <p class="text-sm font-medium">Light</p>
                                        </button>
                                        <button class="p-4 border border-gray-300 rounded-lg text-center hover:border-gray-400">
                                            <i class="fas fa-moon text-2xl text-gray-700 mb-2"></i>
                                            <p class="text-sm font-medium">Dark</p>
                                        </button>
                                        <button class="p-4 border border-gray-300 rounded-lg text-center hover:border-gray-400">
                                            <i class="fas fa-adjust text-2xl text-gray-600 mb-2"></i>
                                            <p class="text-sm font-medium">Auto</p>
                                        </button>
                                    </div>
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Dashboard Layout</label>
                                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-purple-500">
                                        <option>Compact</option>
                                        <option>Standard</option>
                                        <option>Expanded</option>
                                    </select>
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Data Display</label>
                                    <div class="space-y-3">
                                        <div class="flex items-center justify-between">
                                            <span class="text-gray-700">Show advanced metrics</span>
                                            <div class="toggle-switch active" onclick="toggleSwitch(this)"></div>
                                        </div>
                                        <div class="flex items-center justify-between">
                                            <span class="text-gray-700">Enable animations</span>
                                            <div class="toggle-switch active" onclick="toggleSwitch(this)"></div>
                                        </div>
                                        <div class="flex items-center justify-between">
                                            <span class="text-gray-700">Compact tables</span>
                                            <div class="toggle-switch" onclick="toggleSwitch(this)"></div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Date Format</label>
                                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-purple-500">
                                        <option>MM/DD/YYYY</option>
                                        <option>DD/MM/YYYY</option>
                                        <option>YYYY-MM-DD</option>
                                    </select>
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Number Format</label>
                                    <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-purple-500">
                                        <option>1,234.56</option>
                                        <option>1.234,56</option>
                                        <option>1 234.56</option>
                                    </select>
                                </div>
                                
                                <div class="pt-4">
                                    <button onclick="saveSettings()" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700">
                                        Save Preferences
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Other sections (billing, api) would follow similar pattern -->
                </div>
            </div>
        </main>
    </div>

    <!-- Success Modal -->
    <div id="successModal" class="modal">
        <div class="modal-content bg-white rounded-xl shadow-xl p-8 max-w-md">
            <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4 success-checkmark">
                    <i class="fas fa-check text-green-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Settings Saved!</h3>
                <p class="text-gray-600 mb-6">Your changes have been successfully saved.</p>
                <button onclick="closeSuccessModal()" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700">
                    OK
                </button>
            </div>
        </div>
    </div>

    <script>
        // Section navigation
        document.querySelectorAll('[data-section]').forEach(button => {
            button.addEventListener('click', function() {
                // Update active button
                document.querySelectorAll('[data-section]').forEach(b => {
                    b.classList.remove('bg-purple-50', 'text-purple-600', 'font-medium');
                    b.classList.add('text-gray-700');
                });
                this.classList.remove('text-gray-700');
                this.classList.add('bg-purple-50', 'text-purple-600', 'font-medium');
                
                // Show corresponding section
                const section = this.dataset.section;
                document.querySelectorAll('.settings-content').forEach(content => {
                    content.classList.add('hidden');
                });
                document.getElementById(`${section}-section`).classList.remove('hidden');
            });
        });

        // Toggle switch function
        function toggleSwitch(element) {
            element.classList.toggle('active');
        }

        // 2FA toggle
        function toggle2FA() {
            const toggle = document.getElementById('2faToggle');
            toggle.classList.toggle('active');
            
            if (toggle.classList.contains('active')) {
                alert('Two-Factor Authentication setup wizard would open here');
            } else {
                if (confirm('Are you sure you want to disable Two-Factor Authentication?')) {
                    showNotification('2FA disabled', 'warning');
                } else {
                    toggle.classList.add('active');
                }
            }
        }

        // Save settings
        function saveSettings() {
            // Simulate saving
            showLoader();
            setTimeout(() => {
                hideLoader();
                showSuccessModal();
            }, 1500);
        }

        // Change password
        function changePassword() {
            // Validate passwords
            const inputs = document.querySelectorAll('#security-section input[type="password"]');
            const newPassword = inputs[1].value;
            const confirmPassword = inputs[2].value;
            
            if (newPassword !== confirmPassword) {
                showNotification('Passwords do not match', 'error');
                return;
            }
            
            if (newPassword.length < 8) {
                showNotification('Password must be at least 8 characters', 'error');
                return;
            }
            
            // Simulate password change
            showLoader();
            setTimeout(() => {
                hideLoader();
                inputs.forEach(input => input.value = '');
                showNotification('Password updated successfully', 'success');
            }, 1500);
        }

        // Revoke session
        function revokeSession(button) {
            if (confirm('Are you sure you want to end this session?')) {
                const deviceCard = button.closest('.device-card');
                deviceCard.style.opacity = '0.5';
                setTimeout(() => {
                    deviceCard.remove();
                    showNotification('Session ended', 'success');
                }, 300);
            }
        }

        // Show success modal
        function showSuccessModal() {
            document.getElementById('successModal').classList.add('show');
        }

        function closeSuccessModal() {
            document.getElementById('successModal').classList.remove('show');
        }

        // Loader functions
        function showLoader() {
            // Would show a loading spinner
        }

        function hideLoader() {
            // Would hide the loading spinner
        }

        // Notification function
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 ${
                type === 'success' ? 'bg-green-500' : 
                type === 'error' ? 'bg-red-500' : 
                type === 'warning' ? 'bg-yellow-500' :
                'bg-blue-500'
            } text-white`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'times' : 'exclamation'}-circle mr-2"></i>
                    ${message}
                </div>
            `;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Sidebar toggle
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
        });
    </script>
</body>

    <%- include('adminSidebar.ejs') %>
    <!-- Main Content -->
    <div class="lg:ml-64">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b border-gray-200">
            <div class="flex items-center justify-between px-6 py-4">
                <button id="sidebarToggle" class="lg:hidden">
                    <i class="fas fa-bars text-gray-600"></i>
                </button>
                
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <input type="search" placeholder="Search..." class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-purple-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                </div>
                
                <div class="flex items-center space-x-4">
                    <button class="relative">
                        <i class="fas fa-bell text-gray-600"></i>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">3</span>
                    </button>
                    <div class="flex items-center space-x-2">
                        <img src="https://ui-avatars.com/api/?name=Admin+User&background=7c3aed&color=fff" alt="Admin" class="w-8 h-8 rounded-full">
                        <span class="text-sm font-medium">Admin User</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Dashboard Content -->
        <main class="p-6">
            <!-- Page Title -->
            <div class="mb-8">
                <h2 class="text-3xl font-bold text-gray-800">Dashboard Overview</h2>
                <p class="text-gray-600 mt-1">Welcome back! Here's what's happening with Velvra today.</p>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center justify-between mb-4">
                        <div class="bg-purple-100 p-3 rounded-lg">
                            <i class="fas fa-dollar-sign text-purple-600 text-xl"></i>
                        </div>
                        <span class="text-green-500 text-sm font-medium flex items-center">
                            <i class="fas fa-arrow-up mr-1"></i> 
                            <% if (totalRevenue && totalRevenue > 0) { %>
                                <%= ((totalRevenue - (totalRevenue * 0.9)) / totalRevenue * 100).toFixed(1) %>%
                            <% } else { %>
                                0%
                            <% } %>
                        </span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800">
                        $<%= totalRevenue ? totalRevenue.toLocaleString() : '0' %>
                    </h3>
                    <p class="text-gray-600 text-sm mt-1">Total Revenue</p>
                </div>

                <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center justify-between mb-4">
                        <div class="bg-blue-100 p-3 rounded-lg">
                            <i class="fas fa-shopping-bag text-blue-600 text-xl"></i>
                        </div>
                        <span class="text-green-500 text-sm font-medium flex items-center">
                            <i class="fas fa-arrow-up mr-1"></i> 
                            <% if (totalOrders && totalOrders > 0) { %>
                                <%= ((totalOrders - (totalOrders * 0.92)) / totalOrders * 100).toFixed(1) %>%
                            <% } else { %>
                                0%
                            <% } %>
                        </span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800">
                        <%= totalOrders ? totalOrders.toLocaleString() : '0' %>
                    </h3>
                    <p class="text-gray-600 text-sm mt-1">Total Orders</p>
                </div>

                <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center justify-between mb-4">
                        <div class="bg-green-100 p-3 rounded-lg">
                            <i class="fas fa-users text-green-600 text-xl"></i>
                        </div>
                        <span class="text-green-500 text-sm font-medium flex items-center">
                            <i class="fas fa-arrow-up mr-1"></i> 
                            <% if (totalUsers && totalUsers > 0) { %>
                                <%= ((totalUsers - (totalUsers * 0.97)) / totalUsers * 100).toFixed(1) %>%
                            <% } else { %>
                                0%
                            <% } %>
                        </span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800">
                        <%= totalUsers ? totalUsers.toLocaleString() : '0' %>
                    </h3>
                    <p class="text-gray-600 text-sm mt-1">Total Users</p>
                </div>

                <div class="stat-card bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center justify-between mb-4">
                        <div class="bg-orange-100 p-3 rounded-lg">
                            <i class="fas fa-store text-orange-600 text-xl"></i>
                        </div>
                        <span class="text-green-500 text-sm font-medium flex items-center">
                            <i class="fas fa-arrow-up mr-1"></i> 
                            <% if (totalSellers && totalSellers > 0) { %>
                                <%= ((totalSellers - (totalSellers * 0.85)) / totalSellers * 100).toFixed(1) %>%
                            <% } else { %>
                                0%
                            <% } %>
                        </span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-800">
                        <%= totalSellers ? totalSellers.toLocaleString() : '0' %>
                    </h3>
                    <p class="text-gray-600 text-sm mt-1">Total Sellers</p>
                </div>
            </div>

            <!-- Charts Row -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                <!-- Sales Chart -->
                <div class="lg:col-span-2 bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-lg font-semibold text-gray-800">Sales Overview</h3>
                        <select class="text-sm border border-gray-300 rounded-lg px-3 py-1">
                            <option>Last 7 days</option>
                            <option>Last 30 days</option>
                            <option>Last 3 months</option>
                        </select>
                    </div>
                    <div class="chart-container">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>

                <!-- Category Distribution -->
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <h3 class="text-lg font-semibold text-gray-800 mb-6">Category Distribution</h3>
                    <div class="chart-container">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Recent Activity & Top Sellers -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Recent Orders -->
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Recent Orders</h3>
                    <div class="space-y-4">
                        <% if (recentOrders && recentOrders.length > 0) { %>
                            <% recentOrders.forEach(order => { %>
                                <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg transition-colors">
                                    <div class="flex items-center space-x-3">
                                        <img src="https://ui-avatars.com/api/?name=<%= order.user ? encodeURIComponent(order.user.firstName + ' ' + (order.user.lastName || '')) : 'Unknown' %>&background=random" alt="Customer" class="w-10 h-10 rounded-full">
                                        <div>
                                            <p class="font-medium text-gray-800">
                                                <%= order.user ? order.user.firstName + ' ' + (order.user.lastName || '') : 'Unknown User' %>
                                            </p>
                                            <p class="text-sm text-gray-600">Order #<%= order.orderNumber || order._id.toString().slice(-6) %></p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="font-semibold text-gray-800">$<%= order.total.toFixed(2) %></p>
                                        <p class="text-xs <%= order.orderStatus === 'delivered' ? 'text-green-600' : order.orderStatus === 'processing' ? 'text-yellow-600' : 'text-blue-600' %>">
                                            <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                                        </p>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center py-8 text-gray-500">
                                <i class="fas fa-shopping-cart text-4xl mb-4"></i>
                                <p>No recent orders</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Top Sellers -->
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4">Top Sellers</h3>
                    <div class="space-y-4">
                        <% if (topSellers && topSellers.length > 0) { %>
                            <% topSellers.forEach((seller, index) => { %>
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center space-x-3">
                                        <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                                            <span class="text-purple-600 font-semibold"><%= index + 1 %></span>
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-800"><%= seller.brandName %></p>
                                            <p class="text-sm text-gray-600"><%= seller.totalSales %> sales</p>
                                        </div>
                                    </div>
                                    <p class="font-semibold text-gray-800">$<%= seller.totalRevenue.toFixed(2) %></p>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center py-8 text-gray-500">
                                <i class="fas fa-store text-4xl mb-4"></i>
                                <p>No seller data available</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('-translate-x-full');
        });

        // Sales Chart with real data
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Sales',
                    data: [
                        <%= weeklyRevenue ? weeklyRevenue.map(day => day.revenue || 0).join(',') : '0,0,0,0,0,0,0' %>
                    ],
                    borderColor: 'rgb(147, 51, 234)',
                    backgroundColor: 'rgba(147, 51, 234, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });

        // Category Chart with real data
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: [
                    <% if (categoryStats && categoryStats.length > 0) { %>
                        <% categoryStats.forEach((cat, index) => { %>
                            '<%= cat.category %>'<%= index < categoryStats.length - 1 ? ',' : '' %>
                        <% }); %>
                    <% } else { %>
                        'No Data'
                    <% } %>
                ],
                datasets: [{
                    data: [
                        <% if (categoryStats && categoryStats.length > 0) { %>
                            <% categoryStats.forEach((cat, index) => { %>
                                <%= cat.count %><%= index < categoryStats.length - 1 ? ',' : '' %>
                            <% }); %>
                        <% } else { %>
                            1
                        <% } %>
                    ],
                    backgroundColor: [
                        'rgb(147, 51, 234)',
                        'rgb(59, 130, 246)',
                        'rgb(251, 146, 60)',
                        'rgb(34, 197, 94)',
                        'rgb(239, 68, 68)',
                        'rgb(168, 85, 247)'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            usePointStyle: true
                        }
                    }
                }
            }
        });

        // Simulate loading state
        window.addEventListener('load', function() {
            // Add any initialization code here
        });
    </script>
</body>

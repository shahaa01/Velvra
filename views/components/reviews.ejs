                            <label class="block text-sm font-medium text-gray-700 mb-2">Add Photos (Optional)</label>
                            <div class="flex items-center gap-4">
                                <input type="file" id="imageUpload" accept="image/*" multiple class="hidden">
                                <button type="button" onclick="document.getElementById('imageUpload').click()" 
                                        class="px-4 py-2 border border-gray-300 rounded-lg text-sm text-gray-700 hover:bg-gray-50 transition-colors">
                                    📷 Upload Images
                                </button>
                                <span class="text-sm text-gray-500">Up to 5 images</span>
                            </div>
                            <div id="imagePreview" class="grid grid-cols-2 md:grid-cols-5 gap-3 mt-4 hidden"></div>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="pt-4">
                            <button type="submit" id="submitReview" 
                                    class="w-full md:w-auto px-8 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                                Submit Review
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
    
    <script>
        // Star Rating Input Functionality
        const starRatingInput = document.querySelector('.star-rating-input');
        const starInputs = starRatingInput.querySelectorAll('.star-input');
        let currentRating = 0;
        
        starInputs.forEach((star, index) => {
            star.addEventListener('click', () => {
                currentRating = index + 1;
                starRatingInput.dataset.rating = currentRating;
                updateStarDisplay();
            });
            
            star.addEventListener('mouseenter', () => {
                highlightStars(index + 1);
            });
        });
        
        starRatingInput.addEventListener('mouseleave', () => {
            updateStarDisplay();
        });
        
        function highlightStars(rating) {
            starInputs.forEach((star, index) => {
                if (index < rating) {
                    star.classList.add('filled');
                    star.classList.remove('empty');
                } else {
                    star.classList.add('empty');
                    star.classList.remove('filled');
                }
            });
        }
        
        function updateStarDisplay() {
            highlightStars(currentRating);
        }
        
        // Image Upload Preview
        const imageUpload = document.getElementById('imageUpload');
        const imagePreview = document.getElementById('imagePreview');
        let uploadedImages = [];
        
        imageUpload.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            
            if (uploadedImages.length + files.length > 5) {
                alert('You can only upload up to 5 images.');
                return;
            }
            
            files.forEach(file => {
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const imageData = {
                            src: e.target.result,
                            file: file
                        };
                        uploadedImages.push(imageData);
                        renderImagePreview();
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
        
        function renderImagePreview() {
            if (uploadedImages.length === 0) {
                imagePreview.classList.add('hidden');
                return;
            }
            
            imagePreview.classList.remove('hidden');
            imagePreview.innerHTML = uploadedImages.map((image, index) => `
                <div class="image-preview aspect-square bg-gray-100">
                    <img src="${image.src}" alt="Preview ${index + 1}">
                    <button type="button" class="remove-image" onclick="removeImage(${index})">×</button>
                </div>
            `).join('');
        }
        
        function removeImage(index) {
            uploadedImages.splice(index, 1);
            renderImagePreview();
        }
        
        // Form Submission
        const reviewForm = document.getElementById('reviewForm');
        const submitBtn = document.getElementById('submitReview');
        
        reviewForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            const name = document.getElementById('reviewerName').value.trim();
            const review = document.getElementById('reviewText').value.trim();
            
            if (!name || !review || currentRating === 0) {
                alert('Please fill in all required fields and provide a rating.');
                return;
            }
            
            // Simulate form submission
            submitBtn.disabled = true;
            submitBtn.textContent = 'Submitting...';
            
            setTimeout(() => {
                alert('Thank you for your review! It will be published after moderation.');
                reviewForm.reset();
                currentRating = 0;
                updateStarDisplay();
                uploadedImages = [];
                renderImagePreview();
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Review';
            }, 2000);
        });
        
        // Filter and Sort Functionality
        const sortSelect = document.getElementById('sortSelect');
        const filterSelect = document.getElementById('filterSelect');
        const reviewsContainer = document.getElementById('reviewsContainer');
        
        sortSelect.addEventListener('change', filterAndSortReviews);
        filterSelect.addEventListener('change', filterAndSortReviews);
        
        function filterAndSortReviews() {
            const reviews = Array.from(reviewsContainer.querySelectorAll('.review-card'));
            const sortBy = sortSelect.value;
            const filterBy = filterSelect.value;
            
            // Filter reviews
            const filteredReviews = reviews.filter(review => {
                if (filterBy === 'all') return true;
                if (filterBy === 'verified') return review.querySelector('.text-green-700');
                return review.dataset.rating === filterBy;
            });
            
            // Sort reviews
            filteredReviews.sort((a, b) => {
                switch (sortBy) {
                    case 'newest':
                        return new Date(b.dataset.date) - new Date(a.dataset.date);
                    case 'oldest':
                        return new Date(a.dataset.date) - new Date(b.dataset.date);
                    case 'highest':
                        return b.dataset.rating - a.dataset.rating;
                    case 'lowest':
                        return a.dataset.rating - b.dataset.rating;
                    case 'helpful':
                        const aHelpful = parseInt(a.querySelector('button').textContent.match(/\((\d+)\)/)?.[1] || '0');
                        const bHelpful = parseInt(b.querySelector('button').textContent.match(/\((\d+)\)/)?.[1] || '0');
                        return bHelpful - aHelpful;
                    default:
                        return 0;
                }
            });
            
            // Hide all reviews first
            reviews.forEach(review => review.style.display = 'none');
            
            // Show filtered and sorted reviews
            filteredReviews.forEach(review => {
                review.style.display = 'block';
                reviewsContainer.appendChild(review);
            });
        }
        
        // Load More Reviews
        document.getElementById('loadMoreBtn').addEventListener('click', () => {
            // Simulate loading more reviews
            const btn = document.getElementById('loadMoreBtn');
            btn.textContent = 'Loading...';
            btn.disabled = true;
            
            setTimeout(() => {
                btn.textContent = 'Load More Reviews';
                btn.disabled = false;
                // In a real application, you would load more reviews from the server
            }, 1000);
        });
        
        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            updateStarDisplay();
            
            // Add subtle animation to rating bars
            const ratingBars = document.querySelectorAll('.rating-fill');
            ratingBars.forEach((bar, index) => {
                setTimeout(() => {
                    bar.style.width = bar.style.width;
                }, index * 100);
            });
        });
    </script>

                                <div class="flex items-center gap-2 mt-1">
                                    <div class="star-rating">
                                        <span class="star filled">★</span>
                                        <span class="star filled">★</span>
                                        <span class="star filled">★</span>
                                        <span class="star filled">★</span>
                                        <span class="star empty">★</span>
                                    </div>
                                    <span class="text-xs bg-green-100 text-green-700 px-2 py-1 rounded">Verified Purchase</span>
                                </div>
                            </div>

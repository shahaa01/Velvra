<!-- Velvra Flash Messages - Ultra Premium Styling -->

    
    <!-- Success Flash Message Template -->
    <% if (success && success.length > 0) { %>
        <div class="flash-message-container">
            <% if (Array.isArray(success)) { %>
                <% success.forEach(function(msg) { %>
                    <div class="flash-message success" data-auto-dismiss="4000">
                        <button class="flash-message-close" onclick="dismissFlashMessage(this)">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                        <div class="flash-message-content">
                            <div class="flash-message-icon">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <div class="flash-message-text">
                                <div class="flash-message-title">Success</div>
                                <div class="flash-message-description"><%= msg %></div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="flash-message success" data-auto-dismiss="4000">
                    <button class="flash-message-close" onclick="dismissFlashMessage(this)">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">

<% layout('layouts/boilerplate.ejs') %>
<% block('css').append('<link rel="stylesheet" href="/css/signup.css">') %>
    <section class="min-h-screen bg-brand">
    <!-- Main Container -->
    <div class="min-h-screen flex flex-col lg:flex-row main-content-wrapper">
        <!-- Left Side - Branding & Visual -->
        <div class="lg:w-1/2 relative overflow-hidden">
            <!-- Mobile Header -->
            <div class="lg:hidden absolute top-0 left-0 right-0 z-20 p-6 mobile-safe-area">
                <a href="/" class="text-2xl font-light tracking-[0.2em] text-stone-900">VELVRA</a>
            </div>
            
            <!-- Background Image with Overlay -->
            <div class="h-screen lg:h-screen relative bgImageWrapper">
                <img src="https://images.unsplash.com/photo-1490481651871-ab68de25d43d?w=800&h=1200&fit=crop" 
                     alt="Fashion" 
                     class="w-full h-full object-cover mt-15">
                <div class="absolute inset-0 bg-gradient-to-b lg:bg-gradient-to-r from-black/40 via-black/20 to-transparent"></div>
                
                <!-- Desktop Logo -->
                <div class="hidden lg:block absolute top-12 left-12">
                    <a href="/" class="text-3xl font-light tracking-[0.3em] text-white">VELVRA</a>
                </div>
                
                <!-- Inspirational Quote -->
                <div class="absolute bottom-20 left-6 right-6 lg:left-12 lg:right-12 text-white">
                    <p class="text-lg lg:text-2xl font-light leading-relaxed mb-4">
                        "Fashion is the armor to survive the reality of everyday life."
                    </p>
                    <p class="text-sm opacity-80">â€” Bill Cunningham</p>
                </div>
            </div>
        </div>
        
        <!-- Right Side - Sign Up Form -->
        <div class="flex-1 lg:w-1/2 bg-brand flex items-center justify-center p-6 lg:p-12">
            <div class="w-full max-w-md mx-auto animate-fadeInUp">
                <!-- Form Header -->
                <div class="text-center mb-10 lg:mb-12">
                    <h1 class="text-3xl lg:text-4xl font-light text-stone-900 mb-4">
                        Join Our Community
                    </h1>
                    <p class="text-stone-600 font-light">
                        Unlock exclusive access to curated collections and member-only benefits
                    </p>
                </div>
                
                <!-- Social Sign Up -->
                <div class="space-y-3 mb-8">
                    <button class="w-full py-4 px-6 bg-white rounded-xl flex items-center justify-center gap-3 hover:shadow-lg transition-all duration-300 group">
                        <svg class="w-5 h-5" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span class="text-stone-700 font-light group-hover:text-stone-900 transition-colors">
                            Continue with Google
                        </span>
                    </button>
                    
                    <button class="w-full py-4 px-6 bg-black text-white rounded-xl flex items-center justify-center gap-3 hover:bg-stone-900 transition-all duration-300">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/>
                        </svg>
                        <span class="font-light">Continue with Facebook</span>
                    </button>
                </div>
                
                <!-- Divider -->
                <div class="flex items-center gap-4 mb-8">
                    <div class="flex-1 h-px bg-stone-300"></div>
                    <span class="text-stone-500 text-sm font-light">or</span>
                    <div class="flex-1 h-px bg-stone-300"></div>
                </div>
                
                <!-- Sign Up Form -->
                <form class="space-y-5">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-stone-600 mb-2 font-light">First Name</label>
                            <input type="text" 
                                   class="form-input w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-stone-200 rounded-lg focus:outline-none focus:border-orange-500 focus:bg-white"
                                   placeholder="Jane">
                        </div>
                        <div>
                            <label class="block text-sm text-stone-600 mb-2 font-light">Last Name</label>
                            <input type="text" 
                                   class="form-input w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-stone-200 rounded-lg focus:outline-none focus:border-orange-500 focus:bg-white"
                                   placeholder="Doe">
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm text-stone-600 mb-2 font-light">Email Address</label>
                        <input type="email" 
                               class="form-input w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-stone-200 rounded-lg focus:outline-none focus:border-orange-500 focus:bg-white"
                               placeholder="jane@example.com">
                    </div>
                    
                    <div>
                        <label class="block text-sm text-stone-600 mb-2 font-light">Password</label>
                        <input type="password" 
                               class="form-input w-full px-4 py-3 bg-white/70 backdrop-blur-sm border border-stone-200 rounded-lg focus:outline-none focus:border-orange-500 focus:bg-white"
                               placeholder="Create a strong password">
                        <p class="text-xs text-stone-500 mt-2">Must be at least 8 characters</p>
                    </div>
                    
                    <!-- Terms Checkbox -->
                    <div class="flex items-start gap-3 pt-2">
                        <input type="checkbox" id="terms" class="mt-0.5">
                        <label for="terms" class="text-sm text-stone-600 font-light leading-relaxed">
                            I agree to Velvra's <a href="#" class="text-orange-600 hover:text-orange-700 underline">Terms of Service</a> 
                            and <a href="#" class="text-orange-600 hover:text-orange-700 underline">Privacy Policy</a>
                        </label>
                    </div>
                    
                    <!-- Marketing Checkbox -->
                    <div class="flex items-start gap-3">
                        <input type="checkbox" id="marketing" checked>
                        <label for="marketing" class="text-sm text-stone-600 font-light leading-relaxed">
                            Send me exclusive offers and style updates
                        </label>
                    </div>
                    
                    <!-- Submit Button -->
                    <button type="submit" 
                            class="premium-button w-full py-4 bg-stone-900 text-white rounded-lg hover:bg-black transition-all duration-300 font-light tracking-wider text-sm uppercase">
                        Create Account
                    </button>
                </form>
                
                <!-- Sign In Link -->
                <p class="text-center mt-8 text-stone-600 font-light">
                    Already have an account? 
                    <a href="#" class="text-orange-600 hover:text-orange-700 font-normal">Sign In</a>
                </p>
                
                <!-- Benefits List -->
                <div class="mt-12 pt-8 border-t border-stone-300">
                    <p class="text-xs text-stone-600 uppercase tracking-wider mb-4">Member Benefits</p>
                    <div class="grid grid-cols-2 gap-4 text-sm text-stone-700 font-light">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Free Shipping</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Early Access</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Exclusive Sales</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Style Rewards</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<% block('script').append('<script src="/js/index.js"></script>') %>

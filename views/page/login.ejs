<% layout('layouts/boilerplate.ejs') %>
<% block('css').append('<link rel="stylesheet" href="/css/login.css">') %>
<!-- Login Page Content -->
<main class="min-h-screen flex items-center justify-center pt-16 pb-20 bg-[#f8e9d3]">
   <!-- Background Pattern -->
   <div class="fixed inset-0 opacity-5 pointer-events-none">
<div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23000000%22 fill-opacity=%220.1%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
   </div>

   <!-- Main Container -->
   <div class="relative z-10 w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
       <div class="bg-white rounded-none sm:rounded-3xl shadow-2xl overflow-hidden">
           <div class="flex flex-col lg:flex-row">
               <!-- Left Side - Form Section -->
               <div class="w-full lg:w-1/2 p-8 sm:p-12 lg:p-16">
                   <!-- Logo for Mobile -->
                   <div class="lg:hidden text-center mb-8">
                       <h1 class="text-3xl font-light tracking-[0.3em] text-stone-900">VELVRA</h1>
                   </div>

                   <!-- Welcome Text -->
                   <div class="mb-10">
                       <h2 class="text-2xl sm:text-3xl font-light text-stone-900 mb-3">Welcome Back</h2>
                       <p class="text-stone-600 font-light">Sign in to access your exclusive member benefits</p>
                   </div>

                   <!-- Login Form -->
                   <form class="space-y-6" id="loginForm" method="POST" action="/auth/login">
                       <!-- Email Field -->
                       <div class="relative">
                           <input type="email" 
                                  id="username"
                                  name="username"
                                  class="peer w-full px-0 py-3 border-0 border-b border-stone-300 focus:border-stone-900 focus:outline-none transition-colors placeholder-transparent"
                                  placeholder="Email"
                                  required>
                           <label for="username" 
                                  class="absolute left-0 -top-3.5 text-stone-600 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3 peer-placeholder-shown:text-stone-400 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-stone-900">
                               Email Address
                           </label>
                           <span class="absolute right-0 top-3 opacity-0 peer-valid:opacity-100 transition-opacity">
                               <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                               </svg>
                           </span>
                       </div>

                       <!-- Password Field -->
                       <div class="relative">
                           <input type="password" 
                                  id="password"
                                  name="password"
                                  class="peer w-full px-0 py-3 border-0 border-b border-stone-300 focus:border-stone-900 focus:outline-none transition-colors placeholder-transparent"
                                  placeholder="Password"
                                  required>
                           <label for="password" 
                                  class="absolute left-0 -top-3.5 text-stone-600 text-sm transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3 peer-placeholder-shown:text-stone-400 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-stone-900">
                               Password
                           </label>
                           <button type="button" 
                                   id="togglePassword"
                                   class="absolute right-0 top-3 text-stone-400 hover:text-stone-600 transition-colors">
                               <svg id="eyeOpen" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                               </svg>
                               <svg id="eyeClosed" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                               </svg>
                           </button>
                       </div>

                       <!-- Remember Me & Forgot Password -->
                       <div class="flex items-center justify-between pt-2">
                           <label class="flex items-center cursor-pointer group">
                               <input type="checkbox" 
                                      class="w-4 h-4 rounded border-stone-300 text-stone-900 focus:ring-stone-500 focus:ring-offset-0 cursor-pointer">
                               <span class="ml-2 text-sm text-stone-600 group-hover:text-stone-900 transition-colors">Remember me</span>
                           </label>
                           <a href="#" class="text-sm text-stone-600 hover:text-stone-900 transition-colors hover:underline">
                               Forgot password?
                           </a>
                       </div>

                       <!-- Login Button -->
                       <button type="submit" 
                               class="relative w-full py-4 bg-stone-900 text-white font-light tracking-wider uppercase text-sm overflow-hidden group transition-all duration-300 hover:bg-black">
                           <span class="relative z-10">Sign In</span>
                           <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
                       </button>
                   </form>

                   <!-- Divider -->
                   <div class="flex items-center gap-4 my-8">
                       <div class="flex-1 h-px bg-stone-200"></div>
                       <span class="text-stone-400 text-xs uppercase tracking-wider">or continue with</span>
                       <div class="flex-1 h-px bg-stone-200"></div>
                   </div>

                   <!-- Social Login -->
                   <div class="flex gap-4">
                       <button class="flex-1 py-3 px-4 border border-stone-200 rounded-lg hover:bg-stone-50 transition-colors group">
                           <svg class="w-5 h-5 mx-auto" viewBox="0 0 24 24">
                               <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                               <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                               <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                               <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                           </svg>
                       </button>
                       <button class="flex-1 py-3 px-4 border border-stone-200 rounded-lg hover:bg-stone-50 transition-colors group">
                           <svg class="w-5 h-5 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                               <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/>
                           </svg>
                       </button>
                       <button class="flex-1 py-3 px-4 border border-stone-200 rounded-lg hover:bg-stone-50 transition-colors group">
                           <svg class="w-5 h-5 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                               <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10c5.51 0 10-4.48 10-10S17.51 2 12 2zm6.605 4.61a8.502 8.502 0 011.93 5.314c-.281-.054-3.101-.629-5.943-.271-.065-.141-.12-.293-.184-.445a25.416 25.416 0 00-.564-1.236c3.145-1.28 4.577-3.124 4.761-3.362zM12 3.475c2.17 0 4.154.813 5.662 2.148-.152.216-1.443 1.941-4.48 3.08-1.399-2.57-2.95-4.675-3.189-5A8.687 8.687 0 0112 3.475zm-3.633.803a53.896 53.896 0 013.167 4.935c-3.992 1.063-7.517 1.04-7.896 1.04a8.581 8.581 0 014.729-5.975zM3.453 12.01v-.26c.37.01 4.512.065 8.775-1.215.25.477.477.965.694 1.453-.109.033-.228.065-.336.098-4.404 1.42-6.747 5.303-6.942 5.629a8.522 8.522 0 01-2.19-5.705zM12 20.547a8.482 8.482 0 01-5.239-1.8c.152-.315 1.888-3.656 6.703-5.337.022-.01.033-.01.054-.022a35.318 35.318 0 011.823 6.475 8.4 8.4 0 01-3.341.684zm4.761-1.465c-.086-.52-.542-3.015-1.659-6.084 2.679-.423 5.022.271 5.314.369a8.468 8.468 0 01-3.655 5.715z"/>
                           </svg>
                       </button>
                   </div>

                   <!-- Sign Up Link -->
                   <p class="text-center mt-8 text-stone-600 font-light">
                       Don't have an account? 
                       <a href="/auth/signup" class="text-stone-900 font-normal hover:underline ml-1">Sign up</a>
                   </p>
               </div>

               <!-- Right Side - Visual Section -->
               <div class="hidden lg:block lg:w-1/2 relative bg-stone-900">
                   <!-- Background Image -->
                   <div class="absolute inset-0">
                       <img src="https://images.unsplash.com/photo-1558769132-cb1aea458c5e?w=800&h=1200&fit=crop" 
                            alt="Fashion" 
                            class="w-full h-full object-cover opacity-80">
                       <div class="absolute inset-0 bg-gradient-to-t from-stone-900 via-stone-900/50 to-transparent"></div>
                   </div>

                   <!-- Content Overlay -->
                   <div class="relative h-full flex flex-col justify-between p-12">
                       <!-- Logo -->
                       <div>
                           <h1 class="text-4xl font-light tracking-[0.3em] text-white">VELVRA</h1>
                       </div>

                       <!-- Quote -->
                       <div class="text-white">
                           <h3 class="text-3xl font-light mb-6 leading-relaxed">
                               Elevate Your Style Journey
                           </h3>
                           <p class="text-white/80 font-light leading-relaxed">
                               Access exclusive collections, personalized recommendations, and member-only benefits designed for the modern fashion enthusiast.
                           </p>
                       </div>

                       <!-- Feature List -->
                       <div class="space-y-3">
                           <div class="flex items-center gap-3 text-white/80">
                               <div class="w-1 h-8 bg-gradient-to-b from-white/60 to-transparent"></div>
                               <p class="font-light">Curated Collections Daily</p>
                           </div>
                           <div class="flex items-center gap-3 text-white/80">
                               <div class="w-1 h-8 bg-gradient-to-b from-white/60 to-transparent"></div>
                               <p class="font-light">Free Shipping Worldwide</p>
                           </div>
                           <div class="flex items-center gap-3 text-white/80">
                               <div class="w-1 h-8 bg-gradient-to-b from-white/60 to-transparent"></div>
                               <p class="font-light">Exclusive Member Rewards</p>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
</main>
<% block('script').append('<script src="/js/index.js"></script>') %>
<% block('script').append(`<script src = "/js/login.js"></script>`) %>


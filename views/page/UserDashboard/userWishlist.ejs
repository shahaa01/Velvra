<% layout('layouts/dashboardBoilerplate.ejs') %>
<% block('css').append('<link rel="stylesheet" href="/css/userWishlist.css">') %>

    <div class="flex min-h-screen">
        <!-- Sidebar Navigation -->
        <aside id="sidebar" class="fixed lg:static lg:translate-x-0 -translate-x-full top-0 left-0 z-50 w-64 h-full bg-cream border-r border-beige transition-transform duration-300">
            <!-- Mobile Header with Close button -->
            <div class="lg:hidden flex items-center justify-between p-4 border-b border-beige">
                <h2 class="text-xl font-bold text-gold brand-font">Menu</h2>
                <button id="closeSidebar" class="p-2 text-charcoal hover:text-charcoal transition-all duration-300 hover:bg-gold/10 rounded-lg group hover:scale-110" aria-label="Close menu">
                    <i class="fas fa-times text-xl transition-transform duration-300 group-hover:rotate-90"></i>
                </button>
            </div>
            
            <nav class="p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/dashboard" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-home w-5"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/orders" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-shopping-bag w-5"></i>
                            <span>My Orders</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/messages" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-envelope w-5"></i>
                            <span>Messages</span>
                            <span class="ml-auto bg-gold text-charcoal text-xs px-2 py-1 rounded-full">3</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/report-issue" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-exclamation-circle w-5"></i>
                            <span>Report Issues</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-link active flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal">
                            <i class="fas fa-heart w-5"></i>
                            <span>Wishlist</span>
                            <span id="wishlistCount" class="ml-auto bg-stone text-white text-xs px-2 py-1 rounded-full">12</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/settings" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-user-circle w-5"></i>
                            <span>Profile Settings</span>
                        </a>
                    </li>
                    <li class="pt-4 border-t border-beige">
                        <button id="logoutBtn" class="nav-link w-full flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-red-600">
                            <i class="fas fa-sign-out-alt w-5"></i>
                            <span>Log Out</span>
                        </button>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 p-4 sm:p-6 lg:p-8">
            <!-- Page Header -->
            <div class="mb-6">
                <h2 class="text-2xl sm:text-3xl font-semibold text-charcoal mb-2">My Wishlist</h2>
                <p class="text-stone">Items you've saved for later</p>
            </div>

            <!-- Filter and Sort -->
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
                <div class="flex flex-wrap gap-2">
                    <button class="filter-btn px-4 py-2 text-sm font-medium bg-gold text-charcoal rounded-lg transition-all" data-filter="all">
                        All Items
                    </button>
                    <button class="filter-btn px-4 py-2 text-sm font-medium text-stone bg-cream border border-beige rounded-lg hover:bg-pearl transition-all" data-filter="sale">
                        On Sale
                    </button>
                    <button class="filter-btn px-4 py-2 text-sm font-medium text-stone bg-cream border border-beige rounded-lg hover:bg-pearl transition-all" data-filter="instock">
                        In Stock
                    </button>
                </div>
                <select id="sortSelect" class="px-4 py-2 bg-cream border border-beige rounded-lg text-sm focus:outline-none focus:border-gold">
                    <option value="recent">Recently Added</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="name">Name: A-Z</option>
                </select>
            </div>

            <!-- Wishlist Container -->
            <div id="wishlistContainer">
                <!-- Loading State -->
                <div id="loadingState" class="hidden grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    <div class="bg-cream rounded-xl border border-beige p-4">
                        <div class="loading-skeleton h-48 w-full mb-4 rounded-lg"></div>
                        <div class="loading-skeleton h-4 w-3/4 mb-2 rounded"></div>
                        <div class="loading-skeleton h-4 w-1/2 rounded"></div>
                    </div>
                    <div class="bg-cream rounded-xl border border-beige p-4">
                        <div class="loading-skeleton h-48 w-full mb-4 rounded-lg"></div>
                        <div class="loading-skeleton h-4 w-3/4 mb-2 rounded"></div>
                        <div class="loading-skeleton h-4 w-1/2 rounded"></div>
                    </div>
                    <div class="bg-cream rounded-xl border border-beige p-4">
                        <div class="loading-skeleton h-48 w-full mb-4 rounded-lg"></div>
                        <div class="loading-skeleton h-4 w-3/4 mb-2 rounded"></div>
                        <div class="loading-skeleton h-4 w-1/2 rounded"></div>
                    </div>
                </div>

                <!-- Empty State -->
                <div id="emptyState" class="hidden bg-cream rounded-xl p-12 border border-beige text-center">
                    <i class="fas fa-heart text-6xl text-stone mb-4"></i>
                    <h3 class="text-xl font-semibold text-charcoal mb-2">Your wishlist is empty</h3>
                    <p class="text-stone mb-6">Save items you love to buy them later</p>
                    <a href="#" class="inline-block px-6 py-3 bg-gold text-charcoal font-medium rounded-lg hover:bg-velvra-gold-dark transition-colors">
                        Start Shopping
                    </a>
                </div>

                <!-- Wishlist Grid -->
                <div id="wishlistGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    <!-- Items will be populated by JavaScript -->
                </div>
            </div>
        </main>
    </div>

    <!-- Mobile Bottom Navigation -->
    <nav class="lg:hidden fixed bottom-0 left-0 right-0 bg-cream border-t border-beige z-40">
        <div class="grid grid-cols-5 gap-1">
            <a href="/dashboard" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal">
                <i class="fas fa-home text-lg mb-1"></i>
                <span>Home</span>
            </a>
            <a href="/dashboard/orders" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal">
                <i class="fas fa-shopping-bag text-lg mb-1"></i>
                <span>Orders</span>
            </a>
            <a href="#" class="mobile-nav-item active flex flex-col items-center py-2 text-xs">
                <i class="fas fa-heart text-lg mb-1"></i>
                <span>Wishlist</span>
            </a>
            <a href="/dashboard/messages" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal relative">
                <i class="fas fa-envelope text-lg mb-1"></i>
                <span>Messages</span>
                <span class="absolute top-0 right-2 w-2 h-2 bg-red-500 rounded-full"></span>
            </a>
            <a href="/dashboard/settings" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal">
                <i class="fas fa-user text-lg mb-1"></i>
                <span>Profile</span>
            </a>
        </div>
    </nav>

    <!-- Logout Modal -->
    <div id="logoutModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-cream rounded-xl p-6 max-w-sm w-full">
            <h3 class="text-lg font-semibold text-charcoal mb-4">Confirm Logout</h3>
            <p class="text-stone mb-6">Are you sure you want to log out of your account?</p>
            <div class="flex space-x-3">
                <button id="cancelLogout" class="flex-1 px-4 py-2 bg-pearl border border-beige rounded-lg text-stone hover:bg-cream transition-colors">
                    Cancel
                </button>
                <button id="confirmLogout" class="flex-1 px-4 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark transition-colors">
                    Log Out
                </button>
            </div>
        </div>
    </div>

    <!-- Success Notification -->
    <div id="notification" class="fixed bottom-20 lg:bottom-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-full transition-transform duration-300 z-50">
        <div class="flex items-center gap-2">
            <i class="fas fa-check-circle"></i>
            <span id="notificationText">Added to cart!</span>
        </div>
    </div>

    <!-- Overlay -->
    <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-40 z-40 hidden lg:hidden"></div>

    <script src="/js/userWishlist.js"></script>
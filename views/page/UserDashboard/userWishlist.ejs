<% layout('layouts/dashboardBoilerplate') %>
<% block('css').append('<link rel="stylesheet" href="/css/userWishlist.css">') %>

<div class="flex-1 p-6">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">My Wishlist</h1>
        <p class="text-gray-600">Manage your saved products and move them to cart when ready to purchase.</p>
    </div>

    <!-- Wishlist Content -->
    <div class="wishlist-container">
        <% if (wishlist && wishlist.products && wishlist.products.length > 0) { %>
            <!-- Wishlist Items -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
                <% wishlist.products.forEach(product => { %>
                    <div class="wishlist-item bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300" data-product-id="<%= product._id %>">
                        <!-- Product Image -->
                        <div class="relative aspect-square overflow-hidden bg-gray-100">
                            <% if (product.images && product.images.length > 0) { %>
                                <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="w-full h-full object-cover">
                            <% } else { %>
                                <div class="w-full h-full flex items-center justify-center bg-gray-200">
                                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            <% } %>
                            
                            <!-- Remove from Wishlist Button -->
                            <button class="remove-from-wishlist absolute top-3 right-3 w-8 h-8 bg-white rounded-full shadow-lg flex items-center justify-center hover:bg-red-50 transition-colors duration-200" 
                                    data-product-id="<%= product._id %>" 
                                    title="Remove from wishlist">
                                <svg class="w-4 h-4 text-gray-600 hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </button>
                        </div>

                        <!-- Product Details -->
                        <div class="p-4">
                            <!-- Product Name -->
                            <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                                <a href="/product/<%= product._id %>" class="hover:text-velvra-gold transition-colors duration-200">
                                    <%= product.name %>
                                </a>
                            </h3>

                            <!-- Brand -->
                            <% if (product.brand) { %>
                                <p class="text-sm text-gray-600 mb-2"><%= product.brand %></p>
                            <% } %>

                            <!-- Price -->
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center gap-2">
                                    <span class="text-xl font-bold text-gray-900">₹<%= product.price.toLocaleString() %></span>
                                    <% if (product.originalPrice && product.originalPrice > product.price) { %>
                                        <span class="text-sm text-gray-500 line-through">₹<%= product.originalPrice.toLocaleString() %></span>
                                        <span class="text-xs bg-red-100 text-red-600 px-2 py-1 rounded-full">
                                            <%= Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100) %>% OFF
                                        </span>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Size and Color Selection -->
                            <div class="mb-4">
                                <!-- Size Selection -->
                                <% if (product.colors && product.colors.length > 0) { %>
                                    <div class="mb-3">
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Size</label>
                                        <div class="flex flex-wrap gap-2">
                                            <% product.colors[0].sizes.forEach(size => { %>
                                                <button class="size-option px-3 py-1 text-sm border border-gray-300 rounded-lg hover:border-velvra-gold hover:bg-velvra-gold hover:text-white transition-all duration-200 <%= size.stock > 0 ? '' : 'opacity-50 cursor-not-allowed' %>"
                                                        data-size="<%= size.size %>"
                                                        <%= size.stock > 0 ? '' : 'disabled' %>>
                                                    <%= size.size %>
                                                </button>
                                            <% }) %>
                                        </div>
                                    </div>

                                    <!-- Color Selection -->
                                    <div class="mb-3">
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Color</label>
                                        <div class="flex flex-wrap gap-2">
                                            <% product.colors.forEach(color => { %>
                                                <button class="color-option w-8 h-8 rounded-full border-2 border-gray-200 hover:border-velvra-gold transition-all duration-200"
                                                        style="background-color: <%= color.name %>;"
                                                        data-color="<%= color.name %>"
                                                        title="<%= color.name %>">
                                                </button>
                                            <% }) %>
                                        </div>
                                    </div>
                                <% } %>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex gap-2">
                                <button class="move-to-cart flex-1 bg-velvra-gold text-white py-2 px-4 rounded-lg hover:bg-velvra-gold-dark transition-colors duration-200 font-medium"
                                        data-product-id="<%= product._id %>"
                                        data-price="<%= product.price %>">
                                    Move to Cart
                                </button>
                                <button class="view-product bg-gray-100 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-200 transition-colors duration-200 font-medium"
                                        onclick="window.location.href='/product/<%= product._id %>'">
                                    View
                                </button>
                            </div>

                            <!-- Stock Status -->
                            <div class="mt-3 text-sm">
                                <% 
                                let totalStock = 0;
                                if (product.colors && product.colors.length > 0) {
                                    product.colors.forEach(color => {
                                        color.sizes.forEach(size => {
                                            totalStock += size.stock;
                                        });
                                    });
                                }
                                %>
                                <% if (totalStock > 0) { %>
                                    <span class="text-green-600">✓ In Stock</span>
                                <% } else { %>
                                    <span class="text-red-600">✗ Out of Stock</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Empty State (Hidden when items exist) -->
            <div class="empty-wishlist hidden text-center py-12">
                <div class="max-w-md mx-auto">
                    <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Your wishlist is empty</h3>
                    <p class="text-gray-600 mb-6">Start adding products to your wishlist to save them for later.</p>
                    <a href="/shop" class="inline-flex items-center px-6 py-3 bg-velvra-gold text-white rounded-lg hover:bg-velvra-gold-dark transition-colors duration-200 font-medium">
                        Start Shopping
                    </a>
                </div>
            </div>

        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-12">
                <div class="max-w-md mx-auto">
                    <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Your wishlist is empty</h3>
                    <p class="text-gray-600 mb-6">Start adding products to your wishlist to save them for later.</p>
                    <a href="/shop" class="inline-flex items-center px-6 py-3 bg-velvra-gold text-white rounded-lg hover:bg-velvra-gold-dark transition-colors duration-200 font-medium">
                        Start Shopping
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- Success/Error Toast -->
<div id="toast" class="fixed top-4 right-4 z-50 hidden">
    <div class="bg-white rounded-lg shadow-lg border-l-4 p-4 max-w-sm">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <svg id="toast-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <div class="ml-3">
                <p id="toast-message" class="text-sm font-medium"></p>
            </div>
            <div class="ml-auto pl-3">
                <button onclick="hideToast()" class="text-gray-400 hover:text-gray-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="/js/userWishlist.js"></script>
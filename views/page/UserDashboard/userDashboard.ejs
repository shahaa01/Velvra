<% layout('layouts/dashboardBoilerplate.ejs') %>
<% block('css').append('<link rel="stylesheet" href="/css/userDashboard.css">') %>


    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar Navigation -->
        <aside id="sidebar" class="fixed lg:static lg:translate-x-0 -translate-x-full top-0 left-0 z-50 w-64 h-full bg-cream border-r border-beige transition-transform duration-300 flex flex-col">
            <!-- Mobile Header with Close button -->
            <div class="lg:hidden flex items-center justify-between p-4 border-b border-beige flex-shrink-0">
                <h2 class="text-xl font-bold text-gold brand-font">Menu</h2>
                <button id="closeSidebar" class="p-2 text-charcoal hover:text-charcoal transition-all duration-300 hover:bg-gold/10 rounded-lg group hover:scale-110" aria-label="Close menu">
                    <i class="fas fa-times text-xl transition-transform duration-300 group-hover:rotate-90"></i>
                </button>
            </div>
            
            <!-- Navigation Content - Scrollable -->
            <nav class="flex-1 overflow-y-auto p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/dashboard" class="nav-link active flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal">
                            <i class="fas fa-home w-5"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/orders" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-shopping-bag w-5"></i>
                            <span>My Orders</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/messages" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-envelope w-5"></i>
                            <span>Messages</span>
                            <% if (stats.unreadMessages > 0) { %>
                            <span class="ml-auto bg-gold text-charcoal text-xs px-2 py-1 rounded-full"><%= stats.unreadMessages %></span>
                            <% } %>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/report-issue" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-exclamation-circle w-5"></i>
                            <span>Report Issues</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/wishlist" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-heart w-5"></i>
                            <span>Wishlist</span>
                            <% if (stats.wishlistCount > 0) { %>
                            <span class="ml-auto bg-stone text-white text-xs px-2 py-1 rounded-full"><%= stats.wishlistCount %></span>
                            <% } %>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/settings" class="nav-link flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-charcoal">
                            <i class="fas fa-user-circle w-5"></i>
                            <span>Profile Settings</span>
                        </a>
                    </li>
                    <li class="pt-4 border-t border-beige">
                        <button id="logoutBtn" class="nav-link w-full flex items-center space-x-3 px-4 py-3 rounded-lg text-charcoal hover:text-red-600">
                            <i class="fas fa-sign-out-alt w-5"></i>
                            <span>Log Out</span>
                        </button>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <main class="flex-1 flex flex-col overflow-hidden lg:ml-0">
            <!-- Content Area - Only this scrolls -->
            <div class="flex-1 overflow-y-auto scrollbar-hide pb-20 lg:pb-0">
                <div class="p-4 sm:p-6 lg:p-8">
                    <!-- Welcome Section -->
                    <div class="mb-8">
                    <h2 class="text-2xl sm:text-3xl font-semibold text-charcoal mb-2">Welcome back, <%= user.firstName %>!</h2>
                        <p class="text-stone">Here's what's happening with your Velvra account today.</p>
                    </div>

                    <!-- Quick Stats Cards -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
                        <!-- Recent Orders Card -->
                        <div class="quick-card bg-cream rounded-xl p-6 border border-beige">
                            <div class="flex items-center justify-between mb-4">
                                <div class="p-3 bg-gold/20 rounded-lg">
                                    <i class="fas fa-shopping-bag text-gold text-xl"></i>
                                </div>
                            <a href="/dashboard/orders" class="text-xs text-stone">View all →</a>
                        </div>
                        <h3 class="text-2xl font-bold text-charcoal mb-1"><%= stats.activeOrders %></h3>
                        <p class="text-sm text-stone">Active Orders</p>
                        <p class="text-xs text-green-600 mt-2"><%= stats.deliveredOrders %> delivered this week</p>
                        </div>

                    <!-- Wishlist Card -->
                        <div class="quick-card bg-cream rounded-xl p-6 border border-beige">
                            <div class="flex items-center justify-between mb-4">
                                <div class="p-3 bg-gold/20 rounded-lg">
                                    <i class="fas fa-heart text-gold text-xl"></i>
                                </div>
                            <a href="/dashboard/wishlist" class="text-xs text-stone">View all →</a>
                        </div>
                        <h3 class="text-2xl font-bold text-charcoal mb-1"><%= stats.wishlistCount %></h3>
                        <p class="text-sm text-stone">Wishlist Items</p>
                        <p class="text-xs text-blue-600 mt-2">Saved for later</p>
                        </div>

                    <!-- Messages Card -->
                        <div class="quick-card bg-cream rounded-xl p-6 border border-beige">
                            <div class="flex items-center justify-between mb-4">
                                <div class="p-3 bg-gold/20 rounded-lg">
                                    <i class="fas fa-envelope text-gold text-xl"></i>
                                </div>
                            <a href="/dashboard/messages" class="text-xs text-stone">View all →</a>
                        </div>
                        <h3 class="text-2xl font-bold text-charcoal mb-1"><%= stats.unreadMessages %></h3>
                        <p class="text-sm text-stone">Unread Messages</p>
                        <p class="text-xs text-yellow-600 mt-2">Need attention</p>
                        </div>

                    <!-- Total Orders Card -->
                        <div class="quick-card bg-cream rounded-xl p-6 border border-beige">
                            <div class="flex items-center justify-between mb-4">
                                <div class="p-3 bg-gold/20 rounded-lg">
                                    <i class="fas fa-chart-line text-gold text-xl"></i>
                                </div>
                            <a href="/dashboard/orders" class="text-xs text-stone">View all →</a>
                            </div>
                        <h3 class="text-2xl font-bold text-charcoal mb-1"><%= stats.totalOrders %></h3>
                            <p class="text-sm text-stone">Total Orders</p>
                        <p class="text-xs text-gold mt-2">All time</p>
                    </div>
                    </div>

                <!-- Order Activity Chart (use EJS to pass order data for chart) -->
                    <div class="bg-cream rounded-xl p-6 border border-beige mb-8">
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
                            <h3 class="text-lg font-semibold text-charcoal mb-2 sm:mb-0">Order Activity</h3>
                            <select class="text-sm border border-beige rounded-lg px-3 py-2 bg-pearl focus:outline-none focus:border-gold">
                                <option>Last 6 months</option>
                                <option>Last year</option>
                                <option>All time</option>
                            </select>
                        </div>
                        <div class="h-64">
                            <canvas id="orderChart"></canvas>
                        </div>
                    </div>

                    <!-- Recent Activity -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <!-- Recent Orders -->
                        <div class="bg-cream rounded-xl p-6 border border-beige">
                            <h3 class="text-lg font-semibold text-charcoal mb-4">Recent Orders</h3>
                            <div class="space-y-4">
                            <% if (orders && orders.length > 0) { %>
                                <% orders.forEach(function(order) { %>
                                    <div class="flex items-center space-x-4 p-3 bg-pearl rounded-lg">
                                        <img src="<%= order.items[0]?.product?.images[0] || '/images/placeholder.png' %>" alt="Product" class="w-12 h-12 rounded-lg object-cover">
                                        <div class="flex-1">
                                            <p class="font-medium text-charcoal"><%= order.items[0]?.product?.name || 'Product' %></p>
                                            <p class="text-xs text-stone">Order #<%= order.orderNumber %> • <%= order.createdAt.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></p>
                                        </div>
                                        <span class="text-xs px-2 py-1 <%= order.orderStatus === 'delivered' ? 'bg-green-100 text-green-700' : order.orderStatus === 'shipped' ? 'bg-blue-100 text-blue-700' : 'bg-yellow-100 text-yellow-700' %> rounded-full">
                                            <%= order.orderStatus.charAt(0).toUpperCase() + order.orderStatus.slice(1) %>
                                        </span>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="text-center py-8">
                                    <i class="fas fa-shopping-bag text-4xl text-stone mb-4"></i>
                                    <p class="text-stone mb-2">No orders yet</p>
                                    <p class="text-sm text-stone">Start shopping to see your orders here</p>
                                </div>
                            <% } %>
                                    </div>
                        <a href="/dashboard/orders" class="block mt-4 text-center text-sm text-gold hover:text-velvra-gold-dark transition-colors">
                                View All Orders →
                            </a>
                        </div>

                    <!-- Recommended Products (placeholder) -->
                        <div class="bg-cream rounded-xl p-6 border border-beige">
                            <h3 class="text-lg font-semibold text-charcoal mb-4">Recommended for You</h3>
                            <div class="space-y-4">
                                <div class="flex items-center space-x-4 p-3 bg-pearl rounded-lg">
                                <img src="/public/images/placeholder.png" alt="Product" class="w-12 h-12 rounded-lg object-cover">
                                    <div class="flex-1">
                                    <p class="font-medium text-charcoal">-</p>
                                    <p class="text-xs text-stone">-</p>
                                    <p class="text-sm font-semibold text-gold mt-1">-</p>
                                    </div>
                                    <button class="p-2 text-stone hover:text-gold transition-colors">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                            </div>
                            <a href="#" class="block mt-4 text-center text-sm text-gold hover:text-velvra-gold-dark transition-colors">
                                Shop New Arrivals →
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Mobile Bottom Navigation -->
    <nav class="lg:hidden fixed bottom-0 left-0 right-0 bg-cream border-t border-beige z-40">
        <div class="grid grid-cols-5 gap-1">
        <a href="/dashboard" class="mobile-nav-item active flex flex-col items-center py-2 text-xs text-charcoal">
                <i class="fas fa-home text-lg mb-1"></i>
                <span>Home</span>
            </a>
        <a href="/dashboard/orders" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal">
                <i class="fas fa-shopping-bag text-lg mb-1"></i>
                <span>Orders</span>
            </a>
        <a href="/dashboard/wishlist" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal">
                <i class="fas fa-heart text-lg mb-1"></i>
                <span>Wishlist</span>
            </a>
        <a href="/dashboard/messages" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal">
                <i class="fas fa-envelope text-lg mb-1"></i>
                <span>Messages</span>
            </a>
        <a href="/dashboard/settings" class="mobile-nav-item flex flex-col items-center py-2 text-xs text-charcoal">
            <i class="fas fa-user-circle text-lg mb-1"></i>
                <span>Profile</span>
            </a>
        </div>
    </nav>

<!-- Mobile Sidebar Overlay -->
<div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-40 z-40 hidden lg:hidden"></div>

    <!-- Logout Modal -->
<div id="logoutModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-pearl rounded-xl p-6 max-w-sm w-full">
            <h3 class="text-lg font-semibold text-charcoal mb-4">Confirm Logout</h3>
            <p class="text-stone mb-6">Are you sure you want to log out of your account?</p>
            <div class="flex space-x-3">
                <button id="cancelLogout" class="flex-1 px-4 py-2 text-stone border border-beige rounded-lg hover:bg-cream transition-colors">
                    Cancel
                </button>
                <button id="confirmLogout" class="flex-1 px-4 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark transition-colors">
                    Logout
                </button>
            </div>
        </div>
    </div>
</div>
<% block('script').append('<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.0/chart.umd.js"></script>') %>
<% block('script').append('<script src="/js/userDashboard.js"></script>') %>

<script>
    // Pass order activity data to JavaScript
    window.orderActivityData = <%- JSON.stringify(orderActivity) %>;
</script>
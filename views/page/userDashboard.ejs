function closeModal() {
    const modal = document.getElementById('modal');
    if (!modal) return;
    
    const content = modal.querySelector('.relative');
    content.classList.remove('scale-100', 'opacity-100');
    content.classList.add('scale-95', 'opacity-0');
    
    setTimeout(() => {
        modal.remove();
        document.body.style.overflow = '';
    }, 300);
}


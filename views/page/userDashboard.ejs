            heartBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                const svg = heartBtn.querySelector('svg');
                const isWishlisted = svg.classList.contains('text-[#D4AF37]');
                
                if (isWishlisted) {
                    svg.classList.remove('text-[#D4AF37]', 'fill-current');
                    svg.classList.add('text-gray-400');
                    showToast('Removed from wishlist', 'info');
                } else {
                    svg.classList.add('text-[#D4AF37]', 'fill-current');
                    svg.classList.remove('text-gray-400');
                    showToast('Added to wishlist!', 'success');
                }
            });
        }
        
        // Quick Add to Cart
        const addToCartBtn = card.querySelector('.btn-gold');
        if (addToCartBtn && addToCartBtn.textContent.includes('Quick Add')) {
            addToCartBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                showToast('Added to cart!', 'success');
            });
        }
    });
}


    document.body.style.overflow = 'hidden';
    
    // Animate in
    setTimeout(() => {
        modal.querySelector('.relative').classList.remove('scale-95', 'opacity-0');
        modal.querySelector('.relative').classList.add('scale-100', 'opacity-100');
    }, 10);

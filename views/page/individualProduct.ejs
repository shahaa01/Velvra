<script>
  window.product = <%- JSON.stringify(product) %>;
  // Initialize product state with first available color/size
  window.productState = {
    selectedColor: '<%= product.colors[0].name %>',
    selectedSize: '<%= product.sizes[0] %>',
    quantity: 1
  };
  
  // Set current user ID for review ownership checks
  window.currentUserId = '<%= currentUser ? currentUser._id : "" %>';
  
  // Function to get current variant based on selected color and size
  function getCurrentVariant() {
    return window.product.variants.find(v => 
      v.color === window.productState.selectedColor && 
      v.size === window.productState.selectedSize
    );
  }
  
  // Function to update price display
  function updatePriceDisplay() {
    const variant = getCurrentVariant();
    if (!variant) return;
    
    const currentPriceEl = document.getElementById('currentPrice');
    const originalPriceEl = document.getElementById('originalPrice');
    const saleBadgeEl = document.getElementById('saleBadge');
    
    // Update current price
    currentPriceEl.textContent = `₹${variant.salePrice || variant.price}`;
    
    // Update original price and sale badge
    if (variant.salePrice && variant.salePrice < variant.price) {
      if (originalPriceEl) {
        originalPriceEl.textContent = `₹${variant.price}`;
        originalPriceEl.style.display = 'inline';
      } else {
        // Create original price element if it doesn't exist
        const newOriginalPrice = document.createElement('span');
        newOriginalPrice.id = 'originalPrice';
        newOriginalPrice.className = 'text-xl text-velvra-stone line-through';
        newOriginalPrice.textContent = `₹${variant.price}`;
        currentPriceEl.parentNode.insertBefore(newOriginalPrice, currentPriceEl.nextSibling);
      }
      
      if (saleBadgeEl) {
        saleBadgeEl.textContent = `${variant.salePercentage}% OFF`;
        saleBadgeEl.style.display = 'inline';
      } else {
        // Create sale badge if it doesn't exist
        const newSaleBadge = document.createElement('span');
        newSaleBadge.id = 'saleBadge';
        newSaleBadge.className = 'px-3 py-1 bg-red-100 text-red-600 text-sm font-medium rounded-full';
        newSaleBadge.textContent = `${variant.salePercentage}% OFF`;
        currentPriceEl.parentNode.appendChild(newSaleBadge);
      }
    } else {
      // Hide sale elements if no sale
      if (originalPriceEl) originalPriceEl.style.display = 'none';
      if (saleBadgeEl) saleBadgeEl.style.display = 'none';
    }
  }
  
  // Function to update stock display
  function updateStockDisplay() {
    const variant = getCurrentVariant();
    if (!variant) return;
    
    const addToCartBtn = document.getElementById('addToCartBtn');
    const buyNowBtn = document.getElementById('buyNowBtn');
    const stockMessage = document.getElementById('stockMessage');
    
    if (variant.stock > 0) {
      addToCartBtn.disabled = false;
      addToCartBtn.style.opacity = '1';
      addToCartBtn.style.cursor = 'pointer';
      if (buyNowBtn) {
        buyNowBtn.disabled = false;
        buyNowBtn.style.opacity = '1';
        buyNowBtn.style.cursor = 'pointer';
      }
      stockMessage.textContent = `${variant.stock} items in stock`;
      stockMessage.className = 'mt-3 text-center text-green-600';
    } else {
      addToCartBtn.disabled = true;
      addToCartBtn.style.opacity = '0.5';
      addToCartBtn.style.cursor = 'not-allowed';
      if (buyNowBtn) {
        buyNowBtn.disabled = true;
        buyNowBtn.style.opacity = '0.5';
        buyNowBtn.style.cursor = 'not-allowed';
      }
      stockMessage.textContent = 'Out of stock';
      stockMessage.className = 'mt-3 text-center text-red-600';
    }
  }
  
  // Function to update color image
  function updateColorImage(colorName) {
    const colorObj = window.product.colors.find(c => c.name === colorName);
    if (colorObj && colorObj.imageUrl) {
      const mainImage = document.getElementById('mainImage');
      mainImage.src = colorObj.imageUrl;
    }
  }
  
  // Initialize display
  document.addEventListener('DOMContentLoaded', function() {
    updatePriceDisplay();
    updateStockDisplay();
  });
</script>

<% layout('layouts/sellerDashboardBoilerplate.ejs') %>
<% block('css').append('<link rel="stylesheet" href="/css/sellerDashboardStyles/sellerProduct.css">') %>

<!-- Mobile Menu Overlay -->
<div id="mobileMenuOverlay" class="fixed inset-0 bg-charcoal bg-opacity-50 z-40 lg:hidden hidden"></div>

<!-- Sidebar -->
<%- include('../../components/sellerDashboardSidebar', { user: user }) %>

<!-- Main Content -->
<div class="lg:ml-64">
    <!-- Header -->
    <header class="bg-cream border-b border-beige sticky top-0 z-30">
        <div class="px-4 sm:px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <button id="mobileMenuBtn" class="lg:hidden mr-4 text-charcoal">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <div>
                        <h2 class="text-xl sm:text-2xl font-semibold text-charcoal">Product Manager</h2>
                        <p class="text-sm text-gray-700">Manage your product catalog</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <button onclick="refreshProducts()" class="flex items-center space-x-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        <i class="fas fa-sync-alt"></i>
                        <span class="hidden sm:inline font-medium">Refresh</span>
                    </button>
                    <a href="/seller-dashboard/add_product" class="flex items-center space-x-2 px-4 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark transition-colors">
                        <i class="fas fa-plus"></i>
                        <span class="hidden sm:inline font-medium">Add Product</span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Product Management Content -->
    <main class="p-4 sm:p-6">
        <!-- Filters and Search -->
        <div class="bg-cream rounded-xl p-4 border border-beige mb-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="relative">
                    <input type="search" id="searchInput" placeholder="Search products..." 
                           class="w-full pl-10 pr-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <i class="fas fa-search absolute left-3 top-3 text-gray-700"></i>
                </div>
                
                <select id="categoryFilter" class="px-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <option value="">All Categories</option>
                    <option value="clothing">Clothing</option>
                    <option value="accessories">Accessories</option>
                    <option value="shoes">Shoes</option>
                    <option value="bags">Bags</option>
                </select>
                
                <select id="statusFilter" class="px-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="out-of-stock">Out of Stock</option>
                </select>
                
                <select id="sortBy" class="px-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="stock-low">Low Stock First</option>
                </select>
            </div>
        </div>

        <!-- Product Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Total Products</p>
                        <p class="text-xl font-bold text-charcoal"><%= stats.totalProducts %></p>
                    </div>
                    <i class="fas fa-box text-gold"></i>
                </div>
            </div>
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Active</p>
                        <p class="text-xl font-bold text-green-600"><%= stats.activeProducts %></p>
                    </div>
                    <i class="fas fa-check-circle text-green-600"></i>
                </div>
            </div>
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Low Stock</p>
                        <p class="text-xl font-bold text-yellow-600"><%= stats.lowStock %></p>
                    </div>
                    <i class="fas fa-exclamation-triangle text-yellow-600"></i>
                </div>
            </div>
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Out of Stock</p>
                        <p class="text-xl font-bold text-red-600"><%= stats.outOfStock %></p>
                    </div>
                    <i class="fas fa-times-circle text-red-600"></i>
                </div>
            </div>
        </div>

        <!-- View Toggle -->
        <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-2">
                <button id="gridViewBtn" class="p-2 bg-gold text-charcoal rounded-lg">
                    <i class="fas fa-th"></i>
                </button>
                <button id="listViewBtn" class="p-2 bg-cream text-gray-700 rounded-lg hover:bg-beige">
                    <i class="fas fa-list"></i>
                </button>
            </div>
        </div>

        <!-- Products Grid -->
        <div id="productsGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            <!-- Product cards will be inserted here by JavaScript -->
        </div>

        <!-- Products List (hidden by default) -->
        <div id="productsList" class="hidden">
            <div class="bg-cream rounded-xl border border-beige overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-beige/50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Product</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Category</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Price</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Stock</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Status</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="productsTableBody">
                            <!-- Table rows will be inserted here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-12">
            <i class="fas fa-box-open text-6xl text-gray-700 mb-4"></i>
            <h3 class="text-xl font-semibold text-charcoal mb-2">No products found</h3>
            <p class="text-gray-700 mb-6">Start by adding your first product</p>
            <a href="/seller/add_product" class="px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">
                <i class="fas fa-plus mr-2"></i>Add Product
            </a>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="hidden">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                <div class="bg-cream rounded-xl p-4 border border-beige">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
                <div class="bg-cream rounded-xl p-4 border border-beige">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
                <div class="bg-cream rounded-xl p-4 border border-beige hidden lg:block">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
                <div class="bg-cream rounded-xl p-4 border border-beige hidden xl:block">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Edit Product Modal -->
<div id="productModal" class="modal">
    <div class="modal-content bg-pearl rounded-xl shadow-xl w-full max-w-4xl mx-4 relative">
        <div class="p-6 border-b border-beige">
            <div class="flex items-center justify-between">
                <h3 class="text-xl font-semibold text-charcoal">Edit Product</h3>
                <button onclick="closeModal()" class="text-gray-700 hover:text-charcoal">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
        </div>
        <form id="productForm" class="p-6 space-y-6 overflow-y-auto max-h-[80vh]">
            <!-- Basic Information -->
            <div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Basic Information</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Product Name</label>
                        <input type="text" name="name" required placeholder="Enter product name" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Highlights (comma separated)</label>
                        <input type="text" name="highlights" placeholder="e.g., Lightweight, Soft feel, Summer-ready" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                </div>
                <div class="mt-4">
                    <label class="block text-sm font-medium text-charcoal mb-2">Description</label>
                    <textarea name="description" rows="4" placeholder="Enter product description (plain text only)" 
                              class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold"></textarea>
                    <p class="text-xs text-gray-500 mt-1">Enter plain text description without HTML formatting</p>
                </div>
            </div>

            <!-- Variant Management -->
            <div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Product Variants</h4>
                <div class="overflow-x-auto border border-beige rounded-lg">
                    <table class="w-full border-collapse">
                        <thead>
                            <tr class="bg-cream">
                                <th class="border-b border-beige px-4 py-3 text-left text-sm font-medium text-charcoal">Size</th>
                                <th class="border-b border-beige px-4 py-3 text-left text-sm font-medium text-charcoal">Color</th>
                                <th class="border-b border-beige px-4 py-3 text-left text-sm font-medium text-charcoal">Original Price (Rs.)</th>
                                <th class="border-b border-beige px-4 py-3 text-left text-sm font-medium text-charcoal">Sale Price (Rs.)</th>
                                <th class="border-b border-beige px-4 py-3 text-left text-sm font-medium text-charcoal">Stock</th>
                            </tr>
                        </thead>
                        <tbody id="variantTableBody" class="bg-white">
                            <!-- Variants will be populated here by JavaScript -->
                        </tbody>
                    </table>
                </div>
                <p class="text-xs text-gray-500 mt-2">Edit sale prices for individual variants. Leave empty to remove sale price.</p>
            </div>

            <!-- Product Details -->
            <div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Product Details</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Fabric</label>
                        <input type="text" name="fabric" placeholder="e.g., 100% Cotton" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Fit</label>
                        <input type="text" name="fit" placeholder="e.g., Regular Fit" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Occasion</label>
                        <input type="text" name="occasion" placeholder="e.g., Casual, Formal" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Neck Type</label>
                        <input type="text" name="neckType" placeholder="e.g., Round Neck" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Sleeve Type</label>
                        <input type="text" name="sleeveType" placeholder="e.g., Full Sleeve" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Pattern</label>
                        <input type="text" name="pattern" placeholder="e.g., Solid, Printed" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Wash Care</label>
                        <input type="text" name="washCare" placeholder="e.g., Machine wash cold" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Fashion Trend</label>
                        <input type="text" name="fashionTrend" placeholder="e.g., Minimalist" 
                               class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end space-x-4 pt-4 border-t border-beige">
                <button type="button" onclick="closeModal()" 
                        class="px-6 py-2 border border-beige text-charcoal rounded-lg hover:bg-cream">
                    Cancel
                </button>
                <button type="submit" 
                        class="px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Products Data for JavaScript -->
<script>
    window.productsData = <%- JSON.stringify(products || []) %>;
    window.statsData = <%- JSON.stringify(stats || {}) %>;
</script>

<% block('script').append('<script src="/js/sellerDashboardJS/dashboardProduct.js"></script>') %>


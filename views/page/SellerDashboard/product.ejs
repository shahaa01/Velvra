<% layout('layouts/sellerDashboardBoilerplate.ejs') %>
<% block('css').append('<link rel="stylesheet" href="/css/sellerDashboardStyles/sellerProduct.css">') %>

<!-- Mobile Menu Overlay -->
<div id="mobileMenuOverlay" class="fixed inset-0 bg-charcoal bg-opacity-50 z-40 lg:hidden hidden"></div>

<!-- Sidebar -->
<%- include('../../components/sellerDashboardSidebar', { user: user }) %>

<!-- Main Content -->
<div class="lg:ml-64">
    <!-- Header -->
    <header class="bg-cream border-b border-beige sticky top-0 z-30">
        <div class="px-4 sm:px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <button id="mobileMenuBtn" class="lg:hidden mr-4 text-charcoal">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <div>
                        <h2 class="text-xl sm:text-2xl font-semibold text-charcoal">Product Manager</h2>
                        <p class="text-sm text-gray-700">Manage your product catalog</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a href="/seller-dashboard/add_product" class="flex items-center space-x-2 px-4 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark transition-colors">
                        <i class="fas fa-plus"></i>
                        <span class="hidden sm:inline font-medium">Add Product</span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Product Management Content -->
    <main class="p-4 sm:p-6">
        <!-- Filters and Search -->
        <div class="bg-cream rounded-xl p-4 border border-beige mb-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="relative">
                    <input type="search" id="searchInput" placeholder="Search products..." 
                           class="w-full pl-10 pr-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <i class="fas fa-search absolute left-3 top-3 text-gray-700"></i>
                </div>
                
                <select id="categoryFilter" class="px-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <option value="">All Categories</option>
                    <option value="clothing">Clothing</option>
                    <option value="accessories">Accessories</option>
                    <option value="shoes">Shoes</option>
                    <option value="bags">Bags</option>
                </select>
                
                <select id="statusFilter" class="px-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <option value="">All Status</option>
                    <option value="active">Active</option>
                    <option value="draft">Draft</option>
                    <option value="out-of-stock">Out of Stock</option>
                </select>
                
                <select id="sortBy" class="px-4 py-2 border border-beige rounded-lg bg-pearl focus:outline-none focus:border-gold text-charcoal">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="stock-low">Low Stock First</option>
                </select>
            </div>
        </div>

        <!-- Product Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Total Products</p>
                        <p class="text-xl font-bold text-charcoal">156</p>
                    </div>
                    <i class="fas fa-box text-gold"></i>
                </div>
            </div>
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Active</p>
                        <p class="text-xl font-bold text-green-600">142</p>
                    </div>
                    <i class="fas fa-check-circle text-green-600"></i>
                </div>
            </div>
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Low Stock</p>
                        <p class="text-xl font-bold text-yellow-600">8</p>
                    </div>
                    <i class="fas fa-exclamation-triangle text-yellow-600"></i>
                </div>
            </div>
            <div class="bg-cream rounded-lg p-4 border border-beige">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-700">Out of Stock</p>
                        <p class="text-xl font-bold text-red-600">6</p>
                    </div>
                    <i class="fas fa-times-circle text-red-600"></i>
                </div>
            </div>
        </div>

        <!-- View Toggle -->
        <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-2">
                <button id="gridViewBtn" class="p-2 bg-gold text-charcoal rounded-lg">
                    <i class="fas fa-th"></i>
                </button>
                <button id="listViewBtn" class="p-2 bg-cream text-gray-700 rounded-lg hover:bg-beige">
                    <i class="fas fa-list"></i>
                </button>
            </div>
            <div class="flex items-center space-x-2">
                <input type="checkbox" id="selectAll" class="rounded border-stone">
                <label for="selectAll" class="text-sm text-gray-700">Select All</label>
                <button class="ml-4 px-3 py-1 bg-red-500 text-white rounded-lg text-sm hover:bg-red-600 disabled:opacity-50" disabled>
                    <i class="fas fa-trash mr-1"></i>
                    Delete Selected
                </button>
            </div>
        </div>

        <!-- Products Grid -->
        <div id="productsGrid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            <!-- Product cards will be inserted here by JavaScript -->
        </div>

        <!-- Products List (hidden by default) -->
        <div id="productsList" class="hidden">
            <div class="bg-cream rounded-xl border border-beige overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-beige/50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">
                                    <input type="checkbox" class="rounded border-stone">
                                </th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Product</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Category</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Price</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Stock</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Status</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="productsTableBody">
                            <!-- Table rows will be inserted here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-12">
            <i class="fas fa-box-open text-6xl text-gray-700 mb-4"></i>
            <h3 class="text-xl font-semibold text-charcoal mb-2">No products found</h3>
            <p class="text-gray-700 mb-6">Start by adding your first product</p>
            <a href="/seller/add_product" class="px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">
                <i class="fas fa-plus mr-2"></i>Add Product
            </a>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="hidden">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                <div class="bg-cream rounded-xl p-4 border border-beige">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
                <div class="bg-cream rounded-xl p-4 border border-beige">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
                <div class="bg-cream rounded-xl p-4 border border-beige hidden lg:block">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
                <div class="bg-cream rounded-xl p-4 border border-beige hidden xl:block">
                    <div class="loading-shimmer h-48 rounded-lg mb-4"></div>
                    <div class="loading-shimmer h-4 rounded mb-2"></div>
                    <div class="loading-shimmer h-4 rounded w-2/3"></div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Add/Edit Product Modal (Multi-Step Wizard) -->
<div id="productModal" class="modal">
    <div class="modal-content bg-pearl rounded-xl shadow-xl w-full max-w-4xl mx-4 relative">
        <div class="p-6 border-b border-beige">
            <div class="flex items-center justify-between">
                <h3 class="text-xl font-semibold text-charcoal">Add New Product</h3>
                <button onclick="closeModal()" class="text-gray-700 hover:text-charcoal">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <!-- Stepper/Progress Bar -->
            <div class="mt-4 flex items-center justify-between">
                <div class="flex-1 flex items-center">
                    <div class="wizard-step" data-step="1"><span class="step-circle">1</span><span class="step-label hidden sm:inline ml-2">Basic Info</span></div>
                    <div class="wizard-line"></div>
                    <div class="wizard-step" data-step="2"><span class="step-circle">2</span><span class="step-label hidden sm:inline ml-2">Images</span></div>
                    <div class="wizard-line"></div>
                    <div class="wizard-step" data-step="3"><span class="step-circle">3</span><span class="step-label hidden sm:inline ml-2">Variants</span></div>
                    <div class="wizard-line"></div>
                    <div class="wizard-step" data-step="4"><span class="step-circle">4</span><span class="step-label hidden sm:inline ml-2">Details</span></div>
                    <div class="wizard-line"></div>
                    <div class="wizard-step" data-step="5"><span class="step-circle">5</span><span class="step-label hidden sm:inline ml-2">Pricing</span></div>
                    <div class="wizard-line"></div>
                    <div class="wizard-step" data-step="6"><span class="step-circle">6</span><span class="step-label hidden sm:inline ml-2">Review</span></div>
                </div>
            </div>
        </div>
        <form id="productForm" class="p-6 space-y-8 overflow-y-auto max-h-[80vh]">
            <!-- Step 1: Basic Info -->
            <div class="wizard-content" data-step="1">
                <div class="mb-4 p-3 bg-yellow-50 border-l-4 border-yellow-400 rounded">
                    <span class="font-medium text-yellow-700">Great product names and details help you get discovered and boost sales!</span>
                </div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Basic Information</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Product Name</label>
                        <input type="text" name="name" required placeholder="e.g., Premium Linen Shirt" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        <span class="text-xs text-gray-500">Use clear, descriptive names (max 100 chars).</span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Brand</label>
                        <input type="text" name="brand" required placeholder="e.g., Velvra" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        <span class="text-xs text-gray-500">Your store or brand name.</span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Category</label>
                        <input type="text" name="category" required placeholder="e.g., Men, Women, Accessories" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        <span class="text-xs text-gray-500">Main category (e.g., Women).</span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Subcategory</label>
                        <input type="text" name="subcategory" placeholder="e.g., Shirts, Kurtas" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        <span class="text-xs text-gray-500">Optional: e.g., Kurtas, T-Shirts, Bags.</span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Tags (comma separated)</label>
                        <input type="text" name="tags" placeholder="e.g., streetwear, linen, summer" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        <span class="text-xs text-gray-500">Add up to 5 tags for better search.</span>
                    </div>
                </div>
                <div class="mt-4">
                    <label class="block text-sm font-medium text-charcoal mb-2">Short Description</label>
                    <textarea name="description" rows="3" required placeholder="e.g., Lightweight, breathable linen shirt perfect for summer." class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold"></textarea>
                    <span class="text-xs text-gray-500">Describe the product in 1-2 lines.</span>
                </div>
                <div class="mt-6 flex justify-end">
                    <button type="button" class="wizard-next px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">Next</button>
                </div>
            </div>
            <!-- Step 2: Images -->
            <div class="wizard-content hidden" data-step="2">
                <div class="mb-4 p-3 bg-blue-50 border-l-4 border-blue-400 rounded">
                    <span class="font-medium text-blue-700">High-quality images attract more buyers! Show all angles and details.</span>
                </div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Product Images</h4>
                <div class="flex flex-col md:flex-row gap-4 items-start">
                    <div class="flex-1">
                        <label class="block text-sm font-medium text-charcoal mb-2">Main Images</label>
                        <input type="file" name="images" accept="image/*" multiple required class="block w-full text-sm text-gray-700 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-gold file:text-charcoal hover:file:bg-velvra-gold-dark">
                        <p class="text-xs text-gray-500 mt-1 flex items-center"><i class="fas fa-info-circle mr-1"></i>Upload up to 5 images. Max 2MB each. Drag to reorder.</p>
                        <!-- Example image thumbnails -->
                        <div class="mt-4 flex gap-2">
                            <img src="https://images.unsplash.com/photo-1551028719-00167b16eac5?w=60&h=60&fit=crop" class="w-14 h-14 object-cover rounded border" alt="Example 1">
                            <img src="https://images.unsplash.com/photo-1595777457583-95e059d581b8?w=60&h=60&fit=crop" class="w-14 h-14 object-cover rounded border" alt="Example 2">
                        </div>
                        <!-- Placeholder for image preview grid -->
                        <div id="imagePreviewGrid" class="mt-4 grid grid-cols-3 gap-2"></div>
                    </div>
                </div>
                <div class="mt-6 flex justify-between">
                    <button type="button" class="wizard-back px-6 py-2 border border-beige text-charcoal rounded-lg hover:bg-cream">Back</button>
                    <button type="button" class="wizard-next px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">Next</button>
                </div>
            </div>
            <!-- Step 3: Variants (Colors, Images, Size-Stock) -->
            <div class="wizard-content hidden" data-step="3">
                <div class="mb-4 p-3 bg-green-50 border-l-4 border-green-400 rounded">
                    <span class="font-medium text-green-700">Offer multiple colors and sizes to reach more customers. Set stock for each variant.</span>
                </div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Variants (Colors & Stock)</h4>
                <div id="colorsSection" class="space-y-6">
                    <!-- Dynamic color blocks will be added here by JS -->
                </div>
                <button type="button" id="addColorBtn" class="mt-2 px-4 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">+ Add Color</button>
                <p class="text-xs text-gray-500 mt-2 flex items-center"><i class="fas fa-palette mr-1"></i>For each color, specify name, hex, upload images, and set stock for each size.</p>
                <div class="mt-6 flex justify-between">
                    <button type="button" class="wizard-back px-6 py-2 border border-beige text-charcoal rounded-lg hover:bg-cream">Back</button>
                    <button type="button" class="wizard-next px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">Next</button>
                </div>
            </div>
            <!-- Step 4: Product Details -->
            <div class="wizard-content hidden" data-step="4">
                <div class="mb-4 p-3 bg-purple-50 border-l-4 border-purple-400 rounded">
                    <span class="font-medium text-purple-700">Detailed specs help buyers make confident decisions. Highlight what makes your product special!</span>
                </div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Product Details</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Material</label>
                        <input type="text" name="material" required placeholder="e.g., 100% Organic Cotton" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Fit</label>
                        <input type="text" name="fit" placeholder="e.g., Oversized, Slim Fit" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Occasion</label>
                        <input type="text" name="occasion" placeholder="e.g., Festive, Casual, Officewear" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Neck Type</label>
                        <input type="text" name="neckType" placeholder="e.g., Crew Neck, V-Neck" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Sleeve Type</label>
                        <input type="text" name="sleeveType" placeholder="e.g., Full Sleeve, Sleeveless" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Pattern</label>
                        <input type="text" name="pattern" placeholder="e.g., Floral, Solid, Abstract" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Wash Care</label>
                        <input type="text" name="washCare" placeholder="e.g., Machine wash cold. Do not tumble dry." class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Origin Country</label>
                        <input type="text" name="originCountry" placeholder="e.g., Made in Nepal" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                </div>
                <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Highlights (comma separated)</label>
                        <input type="text" name="highlights" placeholder="e.g., Lightweight, Soft feel, Summer-ready" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div class="flex items-center mt-6">
                        <input type="checkbox" name="authenticity" value="true" class="rounded border-stone mr-2">
                        <span class="text-sm">Verified/Handmade</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h5 class="text-md font-semibold text-charcoal mb-2">Model Info</h5>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Model Height (cm)</label>
                            <input type="number" name="modelHeight" placeholder="e.g., 175" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Size Worn</label>
                            <input type="text" name="modelSizeWorn" placeholder="e.g., M" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        </div>
                    </div>
                </div>
                <div class="mt-6 flex justify-between">
                    <button type="button" class="wizard-back px-6 py-2 border border-beige text-charcoal rounded-lg hover:bg-cream">Back</button>
                    <button type="button" class="wizard-next px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">Next</button>
                </div>
            </div>
            <!-- Step 5: Pricing & Sale -->
            <div class="wizard-content hidden" data-step="5">
                <div class="mb-4 p-3 bg-pink-50 border-l-4 border-pink-400 rounded">
                    <span class="font-medium text-pink-700">Set a competitive price. Use sales to attract more buyers!</span>
                </div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Pricing & Sale</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-charcoal mb-2">Price (NPR)</label>
                        <input type="number" name="price" step="0.01" required placeholder="e.g., 2499" class="w-full px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                    </div>
                    <div class="flex items-center gap-4 mt-6 md:mt-0">
                        <label class="flex items-center space-x-2">
                            <input type="checkbox" name="sale" class="rounded border-stone">
                            <span>On Sale</span>
                        </label>
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Sale Percentage (%)</label>
                            <input type="number" name="salePercentage" min="0" max="100" placeholder="e.g., 20" class="w-24 px-4 py-2 border border-beige rounded-lg bg-cream focus:outline-none focus:border-gold">
                        </div>
                    </div>
                </div>
                <div class="mt-6 flex justify-between">
                    <button type="button" class="wizard-back px-6 py-2 border border-beige text-charcoal rounded-lg hover:bg-cream">Back</button>
                    <button type="button" class="wizard-next px-6 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark">Next</button>
                </div>
            </div>
            <!-- Step 6: Review & Submit -->
            <div class="wizard-content hidden" data-step="6">
                <div class="mb-4 p-3 bg-gray-50 border-l-4 border-gray-400 rounded">
                    <span class="font-medium text-gray-700">Review all details before submitting. Make sure everything is accurate!</span>
                </div>
                <h4 class="text-lg font-semibold text-charcoal mb-4">Review & Submit</h4>
                <div id="reviewSummary" class="bg-cream rounded-lg p-4 border border-beige mb-4">

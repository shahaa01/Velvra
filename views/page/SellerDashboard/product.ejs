<!-- Wizard Navigation Script -->
<script>
(function() {
    let currentStep = 1;
    const totalSteps = 6;
    function showStep(step) {
        document.querySelectorAll('.wizard-content').forEach(el => {
            el.classList.add('hidden');
        });
        document.querySelector('.wizard-content[data-step="' + step + '"]').classList.remove('hidden');
        document.querySelectorAll('.wizard-step').forEach(el => {
            const s = parseInt(el.getAttribute('data-step'));
            el.querySelector('.step-circle').classList.remove('bg-gold', 'text-white', 'border-gold', 'border-2');
            if (s === step) {
                el.querySelector('.step-circle').classList.add('bg-gold', 'text-white', 'border-gold', 'border-2');
            } else {
                el.querySelector('.step-circle').classList.remove('bg-gold', 'text-white', 'border-gold', 'border-2');
            }
        });
    }
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('wizard-next')) {
            if (currentStep < totalSteps) {
                currentStep++;
                showStep(currentStep);
            }
        } else if (e.target.classList.contains('wizard-back')) {
            if (currentStep > 1) {
                currentStep--;
                showStep(currentStep);
            }
        }
    });
    // Initial step
    showStep(currentStep);
})();
</script>



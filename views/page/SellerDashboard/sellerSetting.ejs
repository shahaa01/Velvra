<% layout('layouts/sellerDashboardBoilerplate.ejs') %>
<% block('css').append('<link rel="stylesheet" href="/css/sellerDashboardStyles/dashboardSetting.css">') %>

<!-- Mobile Menu Overlay -->
<div id="mobileMenuOverlay" class="fixed inset-0 bg-charcoal bg-opacity-50 z-40 lg:hidden hidden"></div>

<!-- Sidebar -->
<%- include('../../components/sellerDashboardSidebar', { user: user }) %>

<!-- Main Content -->
<div class="lg:ml-64">
    <!-- Header -->
    <header class="bg-cream border-b border-beige sticky top-0 z-30">
        <div class="px-4 sm:px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <button id="mobileMenuBtn" class="lg:hidden mr-4 text-charcoal">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    <div>
                        <h2 class="text-xl sm:text-2xl font-semibold text-charcoal">Store Settings</h2>
                        <p class="text-sm text-gray-700">Manage your store configuration</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <button class="relative p-2 text-gray-700 hover:text-charcoal transition-colors">
                        <i class="fas fa-bell text-xl"></i>
                    </button>
                    <button id="saveAllBtn" class="hidden sm:flex items-center space-x-2 px-4 py-2 bg-gold text-charcoal rounded-lg hover:bg-velvra-gold-dark transition-colors">
                        <i class="fas fa-save"></i>
                        <span class="font-medium">Save All Changes</span>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Settings Content -->
    <main class="p-4 sm:p-6">
        <!-- Store Profile Content -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Basic Information -->
            <div class="space-y-6">
                <div class="settings-section bg-cream rounded-xl p-4 sm:p-6 border border-beige">
                    <h3 class="text-lg font-semibold text-charcoal mb-6">Basic Information</h3>
                    
                    <form id="storeProfileForm" class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Brand Name *</label>
                            <input type="text" id="brandName" name="brandName" value="<%= seller.brandName %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Instagram Handle</label>
                            <input type="text" id="instagram" name="instagram" value="<%= seller.instagram || '' %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Contact Person *</label>
                            <input type="text" id="contactPerson" name="contactPerson" value="<%= seller.contactPerson %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Phone Number *</label>
                            <input type="tel" id="phone" name="phone" value="<%= seller.phone %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                            <p class="text-xs text-gray-700 mt-1">Must be exactly 10 digits starting with 9</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Email *</label>
                            <input type="email" id="email" name="email" value="<%= seller.email %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Business Type *</label>
                            <select id="businessType" name="businessType" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                                <option value="boutique" <%= seller.businessType === 'boutique' ? 'selected' : '' %>>Boutique</option>
                                <option value="instagram" <%= seller.businessType === 'instagram' ? 'selected' : '' %>>Instagram</option>
                                <option value="both" <%= seller.businessType === 'both' ? 'selected' : '' %>>Both</option>
                                <option value="brand" <%= seller.businessType === 'brand' ? 'selected' : '' %>>Brand</option>
                                <option value="designer" <%= seller.businessType === 'designer' ? 'selected' : '' %>>Designer</option>
                            </select>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Owner Name *</label>
                            <input type="text" id="ownerName" name="ownerName" value="<%= seller.ownerName %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">PAN/VAT Number *</label>
                            <input type="text" id="panVatNumber" name="panVatNumber" value="<%= seller.panVatNumber %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required readonly>
                            <p class="text-xs text-gray-700 mt-1">PAN/VAT number cannot be changed</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Location *</label>
                            <select id="location" name="location" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                                <option value="kathmandu" <%= seller.location === 'kathmandu' ? 'selected' : '' %>>Kathmandu</option>
                                <option value="pokhara" <%= seller.location === 'pokhara' ? 'selected' : '' %>>Pokhara</option>
                            </select>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">City/Area *</label>
                            <input type="text" id="city" name="city" value="<%= seller.city %>" class="w-full px-4 py-2 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold transition-colors" required>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-charcoal mb-2">Additional Message</label>
                            <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 bg-pearl border border-beige rounded-lg focus:outline-none focus:border-gold resize-none transition-colors"><%= seller.message || '' %></textarea>
                            <p class="text-xs text-gray-700 mt-1">Optional additional information about your business</p>
                        </div>
                        
                        <div class="mt-6 flex justify-end">
                            <button type="submit" class="save-section-btn px-6 py-2 bg-gold text-charcoal font-medium rounded-lg hover:bg-velvra-gold-dark transition-colors">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Store Information Display -->
            <div class="space-y-6">
                <div class="settings-section bg-cream rounded-xl p-4 sm:p-6 border border-beige">
                    <h3 class="text-lg font-semibold text-charcoal mb-6">Store Information</h3>
                    
                    <div class="space-y-4">
                        <div class="p-4 bg-pearl rounded-lg border border-beige">
                            <h4 class="font-medium text-charcoal mb-2">Current Store Details</h4>
                            <div class="space-y-2 text-sm">
                                <p><strong>Brand:</strong> <span id="currentBrandName"><%= seller.brandName %></span></p>
                                <p><strong>Contact:</strong> <span id="currentContactPerson"><%= seller.contactPerson %></span></p>
                                <p><strong>Phone:</strong> <span id="currentPhone"><%= seller.phone %></span></p>
                                <p><strong>Email:</strong> <span id="currentEmail"><%= seller.email %></span></p>
                                <p><strong>Business Type:</strong> <span id="currentBusinessType"><%= seller.businessType %></span></p>
                                <p><strong>Location:</strong> <span id="currentLocation"><%= seller.location %></span>, <span id="currentCity"><%= seller.city %></span></p>
                            </div>
                        </div>
                        
                        <div class="p-4 bg-pearl rounded-lg border border-beige">
                            <h4 class="font-medium text-charcoal mb-2">Account Information</h4>
                            <div class="space-y-2 text-sm">
                                <p><strong>Owner:</strong> <span id="currentOwnerName"><%= seller.ownerName %></span></p>
                                <p><strong>PAN/VAT:</strong> <span id="currentPanVatNumber"><%= seller.panVatNumber %></span></p>
                                <p><strong>Member Since:</strong> <span id="currentCreatedAt"><%= new Date(seller.createdAt).toLocaleDateString() %></span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Success Notification -->
<div id="successNotification" class="fixed bottom-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-full transition-transform duration-300 z-50">
    <div class="flex items-center gap-2">
        <i class="fas fa-check-circle"></i>
        <span id="notificationMessage">Settings saved successfully!</span>
    </div>
</div>

<!-- Error Notification -->
<div id="errorNotification" class="fixed bottom-4 right-4 bg-red-600 text-white px-6 py-3 rounded-lg shadow-lg transform translate-y-full transition-transform duration-300 z-50">
    <div class="flex items-center gap-2">
        <i class="fas fa-exclamation-circle"></i>
        <span id="errorMessage">An error occurred!</span>
    </div>
</div>

<% block('script').append('<script src="/js/sellerDashboardJS/dashboardSettings.js"></script>') %>


    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'charcoal': '#1a1a1a',
                        'gold': '#d4af37',
                        'cream': '#f8f6f0',
                        'pearl': '#fefcf7',
                        'beige': '#e8dcc6',
                        'stone': '#a8a196',
                        'brand': '#f8e9d3',

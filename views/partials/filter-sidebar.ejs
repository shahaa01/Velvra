<aside id="filterSidebar" class="fixed lg:relative top-0 left-0 h-full lg:h-auto w-80 lg:w-64 bg-white lg:bg-transparent z-50 lg:z-auto transform -translate-x-full lg:translate-x-0 transition-transform duration-300 overflow-y-auto">
    <div class="p-6 lg:p-0">
        <!-- Mobile Close Button -->
        <div class="flex items-center justify-between mb-6 lg:hidden">
            <h2 class="text-xl font-medium">Filters</h2>
            <button id="filterClose" class="p-2 hover:bg-gray-100 rounded-full transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Filter Sections -->
        <div class="space-y-8">
            <!-- Categories -->
            <div class="filter-section">
                <h3 class="font-medium text-gray-900 mb-4 flex items-center justify-between cursor-pointer" onclick="toggleFilterSection(this)">
                    Categories
                    <svg class="w-4 h-4 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </h3>
                <div class="space-y-3 filter-content">
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Jackets & Coats</span>
                        <span class="ml-auto text-xs text-gray-500">(124)</span>
                    </label>
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Shirts</span>
                        <span class="ml-auto text-xs text-gray-500">(89)</span>
                    </label>
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Trousers</span>
                        <span class="ml-auto text-xs text-gray-500">(67)</span>
                    </label>
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Accessories</span>
                        <span class="ml-auto text-xs text-gray-500">(45)</span>
                    </label>
                </div>
            </div>

            <!-- Price Range -->
            <div class="filter-section">
                <h3 class="font-medium text-gray-900 mb-4">Price Range</h3>
                <div class="filter-content">
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-sm text-gray-600">$0</span>
                        <span class="text-sm text-gray-600">$2,000+</span>
                    </div>
                    <div class="relative">
                        <input type="range" min="0" max="2000" value="1000" class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer range-slider">
                        <div class="absolute top-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-black text-white text-xs rounded">
                            $1,000
                        </div>
                    </div>
                </div>
            </div>

            <!-- Colors -->
            <div class="filter-section">
                <h3 class="font-medium text-gray-900 mb-4">Colors</h3>
                <div class="filter-content grid grid-cols-6 gap-3">
                    <button class="w-10 h-10 rounded-full bg-black border-2 border-gray-300 hover:border-black transition-colors relative group">
                        <span class="absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-black text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">Black</span>
                    </button>
                    <button class="w-10 h-10 rounded-full bg-white border-2 border-gray-300 hover:border-black transition-colors relative group">
                        <span class="absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-black text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">White</span>
                    </button>
                    <button class="w-10 h-10 rounded-full bg-gray-500 border-2 border-gray-300 hover:border-black transition-colors relative group">
                        <span class="absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-black text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">Gray</span>
                    </button>
                    <button class="w-10 h-10 rounded-full bg-blue-600 border-2 border-gray-300 hover:border-black transition-colors relative group">
                        <span class="absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-black text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">Blue</span>
                    </button>
                    <button class="w-10 h-10 rounded-full bg-amber-700 border-2 border-gray-300 hover:border-black transition-colors relative group">
                        <span class="absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-black text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">Brown</span>
                    </button>
                    <button class="w-10 h-10 rounded-full bg-green-700 border-2 border-gray-300 hover:border-black transition-colors relative group">
                        <span class="absolute -top-8 left-1/2 -translate-x-1/2 px-2 py-1 bg-black text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">Green</span>
                    </button>
                </div>
            </div>

            <!-- Sizes -->
            <div class="filter-section">
                <h3 class="font-medium text-gray-900 mb-4">Sizes</h3>
                <div class="filter-content grid grid-cols-4 gap-2">
                    <button class="px-4 py-2 border border-gray-300 text-sm hover:border-black hover:bg-black hover:text-white transition-all">XS</button>
                    <button class="px-4 py-2 border border-gray-300 text-sm hover:border-black hover:bg-black hover:text-white transition-all">S</button>
                    <button class="px-4 py-2 border border-gray-300 text-sm hover:border-black hover:bg-black hover:text-white transition-all">M</button>
                    <button class="px-4 py-2 border border-gray-300 text-sm hover:border-black hover:bg-black hover:text-white transition-all">L</button>
                    <button class="px-4 py-2 border border-gray-300 text-sm hover:border-black hover:bg-black hover:text-white transition-all">XL</button>
                    <button class="px-4 py-2 border border-gray-300 text-sm hover:border-black hover:bg-black hover:text-white transition-all">XXL</button>
                </div>
            </div>

            <!-- Brands -->
            <div class="filter-section">
                <h3 class="font-medium text-gray-900 mb-4">Brands</h3>
                <div class="filter-content space-y-3">
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Gucci</span>
                    </label>
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Saint Laurent</span>
                    </label>
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Balenciaga</span>
                    </label>
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" class="w-4 h-4 text-black focus:ring-black border-gray-300 rounded">
                        <span class="ml-3 text-sm text-gray-700 group-hover:text-black transition-colors">Prada</span>
                    </label>
                </div>
            </div>

            <!-- Clear Filters -->
            <button class="w-full py-3 border border-gray-300 text-sm font-medium hover:bg-black hover:text-white hover:border-black transition-all">
                Clear All Filters
            </button>
        </div>
    </div>
</aside>


